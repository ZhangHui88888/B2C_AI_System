---
import Layout from '@layouts/Layout.astro';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import PaymentBadges from '@components/trust/PaymentBadges.astro';

const siteName = import.meta.env.PUBLIC_SITE_NAME || 'DTC Store';
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://example.com';

const breadcrumbItems = [
  { name: 'Home', url: siteUrl },
  { name: 'Shipping', url: new URL('/shipping', siteUrl).toString() },
];
---

<Layout title="Shipping" description={`Shipping policy for ${siteName}.`}>
  <Fragment slot="head">
    <BreadcrumbSchema items={breadcrumbItems} />
  </Fragment>

  <main class="container-custom">
    <section class="section">
      <h1>Shipping</h1>
      <p class="mt-3 text-gray-600 max-w-2xl">
        Shipping times and costs vary by product and destination. The product page displays the best estimate.
      </p>

      <div class="mt-10 grid grid-cols-1 lg:grid-cols-12 gap-8">
        <div class="lg:col-span-7">
          <div class="prose prose-gray max-w-none">
            <h2>Processing time</h2>
            <p>Most orders are processed in 1-2 business days.</p>

            <h2>Delivery estimates</h2>
            <ul>
              <li>Standard shipping: typically 5-12 business days</li>
              <li>International: varies by destination and customs</li>
            </ul>

            <h2>Tracking</h2>
            <p>
              When available, tracking details will appear in your <a href="/order">order lookup</a>.
            </p>

            <h2>Customs & duties</h2>
            <p>
              International orders may be subject to customs fees. These are the customerâ€™s responsibility.
            </p>
          </div>
        </div>

        <aside class="lg:col-span-5">
          <div class="card p-5 sticky top-24">
            <div class="font-semibold text-gray-900">Secure checkout</div>
            <div class="mt-3 text-sm text-gray-600">We support secure payments for a smooth purchase experience.</div>
            <div class="mt-4">
              <PaymentBadges />
            </div>
            <div class="mt-6 grid grid-cols-1 gap-2 text-sm">
              <a class="btn-outline py-2 text-center" href="/returns">Returns policy</a>
              <a class="btn-primary py-2 text-center" href="/products">Browse products</a>
            </div>
          </div>
        </aside>
      </div>
    </section>
  </main>
</Layout>
