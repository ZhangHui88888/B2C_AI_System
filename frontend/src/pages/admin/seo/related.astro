export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

// Get related content data
const { data: relatedContent } = await supabase
  .from('related_content')
  .select('*')
  .eq('is_active', true)
  .order('updated_at', { ascending: false });

// Get products for source selection
const { data: products } = await supabase
  .from('products')
  .select('id, name, slug')
  .eq('is_active', true)
  .order('name')
  .limit(100);

// Get blogs for source selection  
const { data: blogs } = await supabase
  .from('blog_posts')
  .select('id, title, slug')
  .eq('status', 'published')
  .order('title')
  .limit(50);

const allRelated = relatedContent || [];
const allProducts = products || [];
const allBlogs = blogs || [];

// Group by source
const groupedBySource = allRelated.reduce((acc: any, item: any) => {
  const key = `${item.source_type}:${item.source_id}`;
  if (!acc[key]) {
    acc[key] = { source_type: item.source_type, source_id: item.source_id, items: [] };
  }
  acc[key].items.push(item);
  return acc;
}, {});

const sourceGroups = Object.values(groupedBySource);

const stats = {
  totalRelations: allRelated.length,
  aiGenerated: allRelated.filter((r: any) => r.is_ai_generated).length,
  manualOverride: allRelated.filter((r: any) => !r.is_ai_generated).length,
  avgRelevance: allRelated.length 
    ? Math.round(allRelated.reduce((sum: number, r: any) => sum + (r.relevance_score || 0), 0) / allRelated.length * 100) 
    : 0,
};

const relationshipTypes = {
  similar: allRelated.filter((r: any) => r.relationship_type === 'similar').length,
  complementary: allRelated.filter((r: any) => r.relationship_type === 'complementary').length,
  frequently_bought: allRelated.filter((r: any) => r.relationship_type === 'frequently_bought_together').length,
};
