---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

const { data: indexStatus } = await supabase
  .from('index_status')
  .select('*')
  .order('last_checked_at', { ascending: false });

const allPages = indexStatus || [];
const indexed = allPages.filter((p: any) => p.is_indexed);
const notIndexed = allPages.filter((p: any) => !p.is_indexed);
const indexRate = allPages.length ? Math.round((indexed.length / allPages.length) * 100) : 0;
const mobileFriendly = allPages.filter((p: any) => p.is_mobile_friendly).length;
const hasRichResults = allPages.filter((p: any) => p.has_rich_results).length;
---

<AdminLayout title="索引状态" activePage="seo">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">索引状态</h2>
      <p class="text-gray-600 mt-1">监控所有页面的 Google 索引状态</p>
    </div>
    <button
      id="check-all-btn"
      class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm font-medium"
    >
      检查所有页面
    </button>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-sm p-4 border border-gray-100">
      <p class="text-sm text-gray-500">总页面数</p>
      <p class="text-2xl font-bold text-gray-900">{allPages.length}</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 border border-gray-100">
      <p class="text-sm text-gray-500">索引率</p>
      <p class={`text-2xl font-bold ${indexRate >= 90 ? 'text-green-600' : indexRate >= 70 ? 'text-yellow-600' : 'text-red-600'}`}>
        {indexRate}%
      </p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 border border-gray-100">
      <p class="text-sm text-gray-500">已索引</p>
      <p class="text-2xl font-bold text-green-600">{indexed.length}</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 border border-gray-100">
      <p class="text-sm text-gray-500">未索引</p>
      <p class="text-2xl font-bold text-red-600">{notIndexed.length}</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 border border-gray-100">
      <p class="text-sm text-gray-500">富媒体结果</p>
      <p class="text-2xl font-bold text-purple-600">{hasRichResults}</p>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6">
    <div class="border-b border-gray-100">
      <nav class="flex -mb-px">
        <button class="tab-btn px-6 py-3 text-sm font-medium border-b-2 border-primary-600 text-primary-600" data-filter="all">全部 ({allPages.length})
        </button>
        <button class="tab-btn px-6 py-3 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700" data-filter="indexed">已索引 ({indexed.length})
        </button>
        <button class="tab-btn px-6 py-3 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700" data-filter="not_indexed">未索引 ({notIndexed.length})
        </button>
      </nav>
    </div>

    <!-- Pages Table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">页面网址</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">类型</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">已索引</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">移动端</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">富媒体结果</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody id="pages-tbody" class="divide-y divide-gray-100">
          {allPages.length > 0 ? (
            allPages.map((page: any) => (
              <tr class="hover:bg-gray-50 page-row" data-indexed={page.is_indexed ? 'true' : 'false'}>
                <td class="px-6 py-4">
                  <p class="text-sm font-medium text-gray-900 truncate max-w-xs">{page.page_url}</p>
                  <p class="text-xs text-gray-500">
                    上次检查: {page.last_checked_at ? new Date(page.last_checked_at).toLocaleDateString() : '从未'}
                  </p>
                </td>
                <td class="px-6 py-4">
                  <span class="text-xs px-2 py-1 rounded bg-gray-100 text-gray-700 capitalize">{page.page_type || 'page'}</span>
                </td>
                <td class="px-6 py-4 text-center">
                  {page.is_indexed ? (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100">
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </span>
                  ) : (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-red-100">
                      <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </span>
                  )}
                </td>
                <td class="px-6 py-4 text-center">
                  {page.is_mobile_friendly ? (
                    <span class="text-green-600">✓</span>
                  ) : (
                    <span class="text-gray-400">-</span>
                  )}
                </td>
                <td class="px-6 py-4 text-center">
                  {page.has_rich_results ? (
                    <span class="text-purple-600">✓</span>
                  ) : (
                    <span class="text-gray-400">-</span>
                  )}
                </td>
                <td class="px-6 py-4">
                  <p class="text-xs text-gray-600">{page.index_coverage_state || page.index_status || 'Unknown'}</p>
                </td>
                <td class="px-6 py-4">
                  {!page.is_indexed && (
                    <button
                      class="text-primary-600 hover:text-primary-700 text-sm"
                      data-url={page.page_url}
                      onclick="requestIndexing(this)"
                    >
                      请求索引
                    </button>
                  )}
                </td>
              </tr>
            ))
          ) : (
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                暂无已检查的页面。点击"检查所有页面"开始。
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>
</AdminLayout>

<script>
  document.getElementById('check-all-btn')?.addEventListener('click', async () => {
    const btn = document.getElementById('check-all-btn') as HTMLButtonElement;
    btn.disabled = true;
    btn.textContent = '检查中...';

    try {
      const response = await fetch('/api/index-status/check-all', { method: 'POST' });
      const data = await response.json();

      if (response.ok) {
        alert(`已检查 ${data.checked} 个页面。索引率: ${data.index_rate}%。正在刷新...`);
        window.location.reload();
      } else {
        alert(data.error || '检查页面失败');
      }
    } catch (error) {
      alert('检查页面失败');
    } finally {
      btn.disabled = false;
      btn.textContent = '检查所有页面';
    }
  });

  // Tab filtering
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;

      document.querySelectorAll('.tab-btn').forEach(b => {
        b.classList.remove('border-primary-600', 'text-primary-600');
        b.classList.add('border-transparent', 'text-gray-500');
      });
      btn.classList.remove('border-transparent', 'text-gray-500');
      btn.classList.add('border-primary-600', 'text-primary-600');

      document.querySelectorAll('.page-row').forEach(row => {
        const isIndexed = (row as HTMLElement).dataset.indexed;
        if (filter === 'all') {
          (row as HTMLElement).style.display = '';
        } else if (filter === 'indexed') {
          (row as HTMLElement).style.display = isIndexed === 'true' ? '' : 'none';
        } else if (filter === 'not_indexed') {
          (row as HTMLElement).style.display = isIndexed === 'false' ? '' : 'none';
        }
      });
    });
  });

  async function requestIndexing(btn: HTMLElement) {
    const pageUrl = btn.dataset.url;
    if (!pageUrl) return;

    btn.textContent = '请求中...';

    try {
      const response = await fetch('/api/index-status/request-indexing', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ page_url: pageUrl }),
      });

      const data = await response.json();

      if (response.ok) {
        btn.textContent = '已请求!';
        btn.classList.remove('text-primary-600');
        btn.classList.add('text-green-600');
      } else {
        alert(data.error || '请求索引失败');
        btn.textContent = '请求索引';
      }
    } catch (error) {
      alert('请求索引失败');
      btn.textContent = '请求索引';
    }
  }

  (window as any).requestIndexing = requestIndexing;
</script>
