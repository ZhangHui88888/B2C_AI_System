---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

// Get SEO stats overview
const { data: products } = await supabase
  .from('products')
  .select('id, name, slug, meta_title, meta_description, images')
  .eq('is_active', true);

const { data: seoMeta } = await supabase
  .from('seo_meta')
  .select('*');

const { data: redirects } = await supabase
  .from('url_redirects')
  .select('*')
  .eq('is_active', true);

const { data: errors404 } = await supabase
  .from('error_404_logs')
  .select('*')
  .eq('is_resolved', false)
  .order('hit_count', { ascending: false })
  .limit(10);

// Calculate stats
const totalProducts = products?.length || 0;
const productsWithMeta = products?.filter(p => p.meta_title && p.meta_description).length || 0;
const productsWithoutMeta = totalProducts - productsWithMeta;
const totalRedirects = redirects?.length || 0;
const total404Errors = errors404?.length || 0;

// Check for duplicate meta
const titles = seoMeta?.map(m => m.meta_title).filter(Boolean) || [];
const descriptions = seoMeta?.map(m => m.meta_description).filter(Boolean) || [];
const duplicateTitles = titles.length - new Set(titles).size;
const duplicateDescriptions = descriptions.length - new Set(descriptions).size;

// Check images without alt
const imagesWithoutAlt = products?.filter(p => {
  const images = p.images || [];
  return images.some((img: any) => !img.alt);
}).length || 0;

const seoStats = [
  { 
    label: '已有 Meta 的页面', 
    value: productsWithMeta, 
    total: totalProducts,
    percentage: totalProducts > 0 ? Math.round((productsWithMeta / totalProducts) * 100) : 0,
    color: 'green',
    icon: 'check'
  },
  { 
    label: '缺少 Meta', 
    value: productsWithoutMeta, 
    color: productsWithoutMeta > 0 ? 'red' : 'green',
    icon: 'alert'
  },
  { 
    label: '活跃重定向', 
    value: totalRedirects, 
    color: 'blue',
    icon: 'redirect'
  },
  { 
    label: '404 错误', 
    value: total404Errors, 
    color: total404Errors > 0 ? 'yellow' : 'green',
    icon: 'error'
  },
];

const issues = [
  { type: 'warning', message: `发现 ${duplicateTitles} 个重复标题`, count: duplicateTitles, show: duplicateTitles > 0 },
  { type: 'warning', message: `发现 ${duplicateDescriptions} 个重复 Meta 描述`, count: duplicateDescriptions, show: duplicateDescriptions > 0 },
  { type: 'error', message: `${productsWithoutMeta} 个商品缺少 Meta 标签`, count: productsWithoutMeta, show: productsWithoutMeta > 0 },
  { type: 'warning', message: `${imagesWithoutAlt} 个商品图片缺少 alt 文本`, count: imagesWithoutAlt, show: imagesWithoutAlt > 0 },
  { type: 'info', message: `${total404Errors} 个未解决的 404 错误`, count: total404Errors, show: total404Errors > 0 },
].filter(i => i.show);
---

