<script>
  async function runAction(btn: HTMLElement) {
    const api = btn.dataset.api;
    if (!api) return;

    btn.classList.add('opacity-50');
    btn.setAttribute('disabled', 'true');

    try {
      const response = await fetch(api, { method: 'POST' });
      const data = await response.json();

      const resultDiv = document.getElementById('action-result');
      const resultContent = resultDiv?.querySelector('div');
      if (resultDiv && resultContent) {
        resultDiv.classList.remove('hidden');
        if (response.ok) {
          resultContent.className = 'p-4 bg-green-50 text-green-700 rounded-lg text-sm';
          resultContent.textContent = `Success: ${JSON.stringify(data)}`;
        } else {
          resultContent.className = 'p-4 bg-red-50 text-red-700 rounded-lg text-sm';
          resultContent.textContent = `Error: ${data.error || 'Unknown error'}`;
        }
      }
    } catch (error) {
      console.error('Action failed:', error);
    } finally {
      btn.classList.remove('opacity-50');
      btn.removeAttribute('disabled');
    }
  }

  async function requestIndexing(btn: HTMLElement) {
