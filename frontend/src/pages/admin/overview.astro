---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
const totals = {
  orders: 0,
  pendingOrders: 0,
  revenue: 0,
  products: 0,
  customers: 0,
  brands: 0,
};
---

<AdminLayout title="品牌概览" activePage="overview">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">多品牌概览</h2>
        <p class="text-sm text-gray-600">汇总 <span id="totals-brands">{totals.brands}</span> 个品牌的统计数据</p>
      </div>
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        刚刚更新
      </div>
    </div>

    <!-- Aggregate Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-brands-card">{totals.brands}</p>
            <p class="text-xs text-gray-500">活跃品牌</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-revenue">$0.00</p>
            <p class="text-xs text-gray-500">总营收</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-orders">0</p>
            <p class="text-xs text-gray-500">总订单</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-pending-orders">0</p>
            <p class="text-xs text-gray-500">待处理订单</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-products">0</p>
            <p class="text-xs text-gray-500">总商品</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900" id="totals-customers">0</p>
            <p class="text-xs text-gray-500">总客户</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Brand Performance Grid -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-4 border-b border-gray-100">
        <h3 class="font-semibold text-gray-900">品牌业绩</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">品牌</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">营收</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">订单</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">待处理</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">商品</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">客户</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">客单价</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <tr id="brand-stats-loading" class="hover:bg-gray-50">
              <td class="px-4 py-6 text-center text-gray-500" colspan="8">Loading...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Recent Orders Across All Brands -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-4 border-b border-gray-100 flex items-center justify-between">
        <h3 class="font-semibold text-gray-900">最近订单（所有品牌）</h3>
        <a href="/admin/orders" class="text-sm text-primary-600 hover:text-primary-700">查看全部</a>
      </div>
      <div class="divide-y divide-gray-100">
        <div id="recent-orders-loading" class="p-8 text-center text-gray-500">Loading...</div>
        <div id="recent-orders-empty" class="p-8 text-center text-gray-500 hidden">暂无任何品牌的订单</div>
        <div id="recent-orders-list"></div>
      </div>
    </div>
  </div>

  <script>
    const API_URL = import.meta.env.PUBLIC_API_URL || '';
    const apiBase = API_URL && API_URL.trim() ? API_URL.trim().replace(/\/$/, '') : '';
    const api = (path) => (apiBase ? `${apiBase}${path}` : path);

    function escapeHtml(str) {
      return String(str ?? '')
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }

    function formatCurrency(amount) {
      const n = typeof amount === 'number' ? amount : Number(amount);
      const v = Number.isFinite(n) ? n : 0;
      return new Intl.NumberFormat('zh-CN', { style: 'currency', currency: 'USD' }).format(v);
    }

    function formatDate(date) {
      return new Date(date).toLocaleDateString('zh-CN', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
    }

    function setText(id, value) {
      const el = document.getElementById(id);
      if (el) el.textContent = String(value ?? '');
    }

    function bindSwitchBrandButtons() {
      document.querySelectorAll('.switch-brand-btn').forEach((btn) => {
        btn.addEventListener('click', () => {
          const brandId = btn.dataset.brandId;
          if (brandId) {
            document.cookie = `brand_id=${brandId}; path=/; max-age=31536000; SameSite=Lax`;
            window.location.href = '/admin';
          }
        });
      });
    }

    function renderBrandStatsRows(rows) {
      const tbody = document.querySelector('tbody.divide-y.divide-gray-100');
      if (!tbody) return;

      if (!Array.isArray(rows) || rows.length === 0) {
        tbody.innerHTML = `<tr class="hover:bg-gray-50"><td class="px-4 py-6 text-center text-gray-500" colspan="8">暂无数据</td></tr>`;
        return;
      }

      tbody.innerHTML = rows
        .map((brand) => {
          const logo = brand?.logo_url
            ? `<img src="${escapeHtml(brand.logo_url)}" alt="${escapeHtml(brand?.name)}" class="w-8 h-8 rounded-lg object-cover" />`
            : `<div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center"><span class="text-sm font-bold text-primary-600">${escapeHtml((brand?.name || 'B').charAt(0))}</span></div>`;

          const pending = Number(brand?.pendingOrders || 0);
          const pendingHtml = pending > 0
            ? `<span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-700 rounded-full">${escapeHtml(pending)}</span>`
            : `<span class="text-gray-400">0</span>`;

          return `
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-4">
                <div class="flex items-center gap-3">
                  ${logo}
                  <div>
                    <p class="font-medium text-gray-900">${escapeHtml(brand?.name)}</p>
                    <p class="text-xs text-gray-500">${escapeHtml(brand?.slug)}</p>
                  </div>
                </div>
              </td>
              <td class="px-4 py-4 text-right"><span class="font-semibold text-gray-900">${escapeHtml(formatCurrency(brand?.totalRevenue || 0))}</span></td>
              <td class="px-4 py-4 text-right text-gray-900">${escapeHtml(brand?.totalOrders || 0)}</td>
              <td class="px-4 py-4 text-right">${pendingHtml}</td>
              <td class="px-4 py-4 text-right text-gray-900">${escapeHtml(brand?.activeProducts || 0)} / ${escapeHtml(brand?.totalProducts || 0)}</td>
              <td class="px-4 py-4 text-right text-gray-900">${escapeHtml(brand?.totalCustomers || 0)}</td>
              <td class="px-4 py-4 text-right text-gray-900">${escapeHtml(formatCurrency(brand?.avgOrderValue || 0))}</td>
              <td class="px-4 py-4 text-center">
                <div class="flex items-center justify-center gap-2">
                  <a href="/admin/brands/${escapeHtml(brand?.id)}/settings" class="text-primary-600 hover:text-primary-700 text-sm">设置</a>
                  <button class="switch-brand-btn text-gray-600 hover:text-gray-700 text-sm" data-brand-id="${escapeHtml(brand?.id)}">切换</button>
                </div>
              </td>
            </tr>
          `;
        })
        .join('');

      bindSwitchBrandButtons();
    }

    function renderRecentOrders(orders) {
      const loading = document.getElementById('recent-orders-loading');
      const empty = document.getElementById('recent-orders-empty');
      const list = document.getElementById('recent-orders-list');
      if (!list || !empty || !loading) return;

      loading.classList.add('hidden');

      if (!Array.isArray(orders) || orders.length === 0) {
        empty.classList.remove('hidden');
        list.innerHTML = '';
        return;
      }

      empty.classList.add('hidden');

      const statusColors = {
        pending: 'bg-yellow-100 text-yellow-700',
        paid: 'bg-green-100 text-green-700',
        processing: 'bg-green-100 text-green-700',
        shipped: 'bg-blue-100 text-blue-700',
        delivered: 'bg-purple-100 text-purple-700',
        cancelled: 'bg-gray-100 text-gray-600',
        refunded: 'bg-red-100 text-red-700',
        failed: 'bg-red-100 text-red-700',
      };

      list.innerHTML = orders
        .map((order) => {
          const brand = order?.brand || null;
          const brandName = brand?.name || '';
          const brandLogo = brand?.logo_url
            ? `<img src="${escapeHtml(brand.logo_url)}" alt="${escapeHtml(brandName)}" class="w-6 h-6 rounded object-cover" />`
            : `<div class="w-6 h-6 bg-primary-100 rounded flex items-center justify-center"><span class="text-xs font-bold text-primary-600">${escapeHtml((brandName || '?').charAt(0))}</span></div>`;

          const status = order?.status || '';
          const statusClass = statusColors[status] || 'bg-gray-100 text-gray-600';

          return `
            <div class="p-4 flex items-center justify-between hover:bg-gray-50">
              <div class="flex items-center gap-4">
                <div class="flex items-center gap-2">${brandLogo}</div>
                <div>
                  <p class="font-medium text-gray-900">${escapeHtml(order?.order_number || '')}</p>
                  <p class="text-sm text-gray-500">${escapeHtml(order?.customer_email || '')}</p>
                </div>
              </div>
              <div class="flex items-center gap-6">
                <span class="text-sm text-gray-500">${escapeHtml(brandName)}</span>
                <span class="font-medium text-gray-900">${escapeHtml(formatCurrency(order?.total_amount || 0))}</span>
                <span class="px-2 py-1 text-xs font-medium rounded-full ${statusClass}">${escapeHtml(status)}</span>
                <span class="text-sm text-gray-500">${escapeHtml(formatDate(order?.created_at))}</span>
              </div>
            </div>
          `;
        })
        .join('');
    }

    async function loadPageData() {
      try {
        const res = await fetch(api('/api/admin/overview/page-data'));
        if (!res.ok) return;
        const data = await res.json();

        const totals = data?.totals || {};
        setText('totals-brands', totals.brands ?? 0);
        setText('totals-brands-card', totals.brands ?? 0);
        setText('totals-revenue', formatCurrency(totals.revenue ?? 0));
        setText('totals-orders', totals.orders ?? 0);
        setText('totals-pending-orders', totals.pendingOrders ?? 0);
        setText('totals-products', totals.products ?? 0);
        setText('totals-customers', totals.customers ?? 0);

        renderBrandStatsRows(data?.brandStats || []);
        renderRecentOrders(data?.recentOrders || []);
      } catch {
        // ignore
      }
    }

    setTimeout(loadPageData, 0);
  </script>
</AdminLayout>
