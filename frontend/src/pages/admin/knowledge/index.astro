---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

const page = parseInt(Astro.url.searchParams.get('page') || '1');
const sourceType = Astro.url.searchParams.get('source_type') || '';
const limit = 20;
const offset = (page - 1) * limit;

let query = supabase
  .from('knowledge_base')
  .select('id, title, content, source_type, created_at', { count: 'exact' })
  .order('created_at', { ascending: false });

if (sourceType) {
  query = query.eq('source_type', sourceType);
}

const { data: entries, count } = await query.range(offset, offset + limit - 1);
const totalPages = Math.ceil((count || 0) / limit);

const sourceTypes = ['manual', 'product', 'faq', 'policy', 'blog'];
---

<AdminLayout title="Knowledge Base" activePage="knowledge">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Entry Form -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sticky top-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Add Knowledge Entry</h2>
        
        <form id="add-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
            <input type="text" id="entry-title" name="title" class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" placeholder="Optional title..." />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Content *</label>
            <textarea id="entry-content" name="content" rows="6" required class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" placeholder="Enter knowledge content..."></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Source Type</label>
            <select id="entry-source" name="source_type" class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
              <option value="manual">Manual Entry</option>
              <option value="faq">FAQ</option>
              <option value="policy">Policy</option>
              <option value="blog">Blog</option>
            </select>
          </div>

          <button type="submit" id="add-btn" class="w-full px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors disabled:opacity-50">
            Add Entry
          </button>
        </form>

        <div class="mt-6 pt-6 border-t border-gray-100">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Quick Actions</h3>
          <button id="sync-products-btn" class="w-full px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors text-sm">
            Sync from Products
          </button>
          <p class="text-xs text-gray-500 mt-2">Import product info into knowledge base for AI to use</p>
        </div>
      </div>
    </div>

    <!-- Entries List -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <h2 class="text-lg font-semibold text-gray-900">Entries</h2>
            <span class="text-sm text-gray-500">{count || 0} total</span>
          </div>
          <select id="source-filter" class="text-sm border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            <option value="">All Sources</option>
            {sourceTypes.map((s) => (
              <option value={s} selected={sourceType === s}>{s.charAt(0).toUpperCase() + s.slice(1)}</option>
            ))}
          </select>
        </div>

        <div class="divide-y divide-gray-100">
          {entries && entries.length > 0 ? (
            entries.map((entry) => (
              <div class="p-4 hover:bg-gray-50 group" data-id={entry.id}>
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      {entry.title && <h3 class="text-sm font-medium text-gray-900">{entry.title}</h3>}
                      <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-600">
                        {entry.source_type}
                      </span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">{entry.content}</p>
                    <p class="text-xs text-gray-400 mt-1">{new Date(entry.created_at).toLocaleDateString()}</p>
                  </div>
                  <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity ml-4">
                    <button class="edit-entry text-primary-600 hover:text-primary-700" data-id={entry.id} data-title={entry.title || ''} data-content={entry.content}>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </button>
                    <button class="delete-entry text-red-600 hover:text-red-700" data-id={entry.id}>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            ))
          ) : (
            <div class="p-8 text-center text-gray-500">No entries found</div>
          )}
        </div>

        {totalPages > 1 && (
          <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
            <span class="text-sm text-gray-500">Page {page} of {totalPages}</span>
            <div class="flex gap-2">
              {page > 1 && (
                <a href={`/admin/knowledge?page=${page - 1}${sourceType ? `&source_type=${sourceType}` : ''}`} class="px-3 py-1 text-sm border rounded hover:bg-gray-50">Previous</a>
              )}
              {page < totalPages && (
                <a href={`/admin/knowledge?page=${page + 1}${sourceType ? `&source_type=${sourceType}` : ''}`} class="px-3 py-1 text-sm border rounded hover:bg-gray-50">Next</a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <script>
    import { api } from '@lib/api';

    const form = document.getElementById('add-form') as HTMLFormElement;
    const addBtn = document.getElementById('add-btn') as HTMLButtonElement;
    const sourceFilter = document.getElementById('source-filter') as HTMLSelectElement;
    const syncBtn = document.getElementById('sync-products-btn') as HTMLButtonElement;

    sourceFilter?.addEventListener('change', () => {
      const val = sourceFilter.value;
      window.location.href = `/admin/knowledge${val ? `?source_type=${val}` : ''}`;
    });

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const title = formData.get('title') as string;
      const content = formData.get('content') as string;
      const source_type = formData.get('source_type') as string;

      if (!content) return;

      addBtn.disabled = true;
      addBtn.textContent = 'Adding...';

      try {
        const result = await api.addKnowledge({ title, content, source_type });
        if (result.success) {
          window.location.reload();
        } else {
          alert('Failed to add entry');
        }
      } catch {
        alert('Failed to add entry');
      } finally {
        addBtn.disabled = false;
        addBtn.textContent = 'Add Entry';
      }
    });

    syncBtn?.addEventListener('click', async () => {
      syncBtn.disabled = true;
      syncBtn.textContent = 'Syncing...';

      try {
        const result = await api.syncKnowledge(['product']);
        if (result.success) {
          alert(result.data?.message || 'Sync complete');
          window.location.reload();
        } else {
          alert('Sync failed');
        }
      } catch {
        alert('Sync failed');
      } finally {
        syncBtn.disabled = false;
        syncBtn.textContent = 'Sync from Products';
      }
    });

    document.querySelectorAll('.delete-entry').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id;
        if (!id || !confirm('Delete this entry?')) return;

        try {
          const result = await api.deleteKnowledge(id);
          if (result.success) {
            window.location.reload();
          }
        } catch {
          alert('Failed to delete');
        }
      });
    });

    document.querySelectorAll('.edit-entry').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const el = e.currentTarget as HTMLElement;
        const title = el.dataset.title || '';
        const content = el.dataset.content || '';
        
        (document.getElementById('entry-title') as HTMLInputElement).value = title;
        (document.getElementById('entry-content') as HTMLTextAreaElement).value = content;
        
        document.getElementById('entry-content')?.focus();
      });
    });
  </script>
</AdminLayout>
