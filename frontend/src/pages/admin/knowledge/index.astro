---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';

// Data loaded dynamically via client-side API calls
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const sourceType = Astro.url.searchParams.get('source_type') || '';
const entries: any[] = [];
const count = 0;
const totalPages = 1;
const sourceTypes = ['manual', 'product', 'faq', 'policy', 'blog'];
---

<AdminLayout title="知识库" activePage="knowledge">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Entry Form -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sticky top-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">添加知识条目</h2>
        
        <form id="add-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">标题</label>
            <input type="text" id="entry-title" name="title" class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" placeholder="可选标题..." />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">内容 *</label>
            <textarea id="entry-content" name="content" rows="6" required class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" placeholder="输入知识内容..."></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">来源类型</label>
            <select id="entry-source" name="source_type" class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
              <option value="manual">手动输入</option>
              <option value="faq">常见问题</option>
              <option value="policy">政策</option>
              <option value="blog">博客</option>
            </select>
          </div>

          <button type="submit" id="add-btn" class="w-full px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors disabled:opacity-50">
            添加条目
          </button>
        </form>

        <div class="mt-6 pt-6 border-t border-gray-100">
          <h3 class="text-sm font-medium text-gray-700 mb-3">快速操作</h3>
          <button id="sync-products-btn" class="w-full px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors text-sm">从商品同步</button>
          <p class="text-xs text-gray-500 mt-2">将商品信息导入知识库供 AI 使用</p>
        </div>
      </div>
    </div>

    <!-- Entries List -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <h2 class="text-lg font-semibold text-gray-900">条目</h2>
            <span class="text-sm text-gray-500">共 {count || 0} 条</span>
          </div>
          <select id="source-filter" class="text-sm border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            <option value="">所有来源</option>
            {sourceTypes.map((s) => (
              <option value={s} selected={sourceType === s}>{s.charAt(0).toUpperCase() + s.slice(1)}</option>
            ))}
          </select>
        </div>

        <div class="divide-y divide-gray-100">
          {entries && entries.length > 0 ? (
            entries.map((entry) => (
              <div class="p-4 hover:bg-gray-50 group" data-id={entry.id}>
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      {entry.title && <h3 class="text-sm font-medium text-gray-900">{entry.title}</h3>}
                      <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-600">
                        {entry.source_type}
                      </span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">{entry.content}</p>
                    <p class="text-xs text-gray-400 mt-1">{new Date(entry.created_at).toLocaleDateString()}</p>
                  </div>
                  <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity ml-4">
                    <button class="edit-entry text-primary-600 hover:text-primary-700" data-id={entry.id} data-title={entry.title || ''} data-content={entry.content}>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </button>
                    <button class="delete-entry text-red-600 hover:text-red-700" data-id={entry.id}>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            ))
          ) : (
            <div class="p-8 text-center text-gray-500">未找到条目</div>
          )}
        </div>

        {totalPages > 1 && (
          <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
            <span class="text-sm text-gray-500">第 {page} 页，共 {totalPages} 页</span>
            <div class="flex gap-2">
              {page > 1 && (
                <a href={`/admin/knowledge?page=${page - 1}${sourceType ? `&source_type=${sourceType}` : ''}`} class="px-3 py-1 text-sm border rounded hover:bg-gray-50">上一页</a>
              )}
              {page < totalPages && (
                <a href={`/admin/knowledge?page=${page + 1}${sourceType ? `&source_type=${sourceType}` : ''}`} class="px-3 py-1 text-sm border rounded hover:bg-gray-50">下一页</a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <script>
    import { api } from '@lib/api';

    const form = document.getElementById('add-form') as HTMLFormElement;
    const addBtn = document.getElementById('add-btn') as HTMLButtonElement;
    const sourceFilter = document.getElementById('source-filter') as HTMLSelectElement;
    const syncBtn = document.getElementById('sync-products-btn') as HTMLButtonElement;
    const entriesList = document.querySelector('.space-y-4');

    // Load knowledge entries on init
    async function loadKnowledge() {
      const url = new URL(window.location.href);
      const sourceType = url.searchParams.get('source_type') || '';
      const page = url.searchParams.get('page') || '1';
      
      try {
        const params = new URLSearchParams({ page, limit: '20' });
        if (sourceType) params.set('source_type', sourceType);
        
        const res = await fetch(`/api/knowledge?${params}`);
        if (!res.ok) return;
        const json = await res.json();
        if (json.data) renderEntries(json.data);
      } catch (e) {
        console.error('Failed to load knowledge:', e);
      }
    }

    function renderEntries(entries: any[]) {
      if (!entriesList) return;
      if (entries.length === 0) {
        entriesList.innerHTML = '<div class="text-center py-8 text-gray-500">暂无知识条目</div>';
        return;
      }
      entriesList.innerHTML = entries.map(entry => `
        <div class="bg-white rounded-lg border border-gray-100 p-4" data-entry-id="${entry.id}">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              ${entry.title ? `<h3 class="font-medium text-gray-900">${entry.title}</h3>` : ''}
              <p class="text-sm text-gray-600 mt-1 line-clamp-3">${entry.content}</p>
            </div>
            <button class="delete-entry text-gray-400 hover:text-red-600 ml-2" data-id="${entry.id}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </button>
          </div>
          <div class="mt-2 flex items-center gap-2 text-xs text-gray-500">
            <span class="px-2 py-0.5 bg-gray-100 rounded">${entry.source_type}</span>
            <span>${new Date(entry.created_at).toLocaleDateString()}</span>
          </div>
        </div>
      `).join('');
      
      document.querySelectorAll('.delete-entry').forEach(btn => {
        btn.addEventListener('click', async () => {
          const id = (btn as HTMLElement).dataset.id;
          if (!confirm('删除此条目？')) return;
          const result = await api.deleteKnowledge(id!);
          if (result.success) loadKnowledge();
        });
      });
    }

    loadKnowledge();

    sourceFilter?.addEventListener('change', () => {
      const val = sourceFilter.value;
      window.location.href = `/admin/knowledge${val ? `?source_type=${val}` : ''}`;
    });

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const title = formData.get('title') as string;
      const content = formData.get('content') as string;
      const source_type = formData.get('source_type') as string;

      if (!content) return;

      addBtn.disabled = true;
      addBtn.textContent = '添加中...';

      try {
        const result = await api.addKnowledge({ title, content, source_type });
        if (result.success) {
          window.location.reload();
        } else {
          alert('添加条目失败');
        }
      } catch {
        alert('添加条目失败');
      } finally {
        addBtn.disabled = false;
        addBtn.textContent = '添加条目';
      }
    });

    syncBtn?.addEventListener('click', async () => {
      syncBtn.disabled = true;
      syncBtn.textContent = '同步中...';

      try {
        const result = await api.syncKnowledge(['product']);
        if (result.success) {
          alert(result.data?.message || '同步完成');
          window.location.reload();
        } else {
          alert('同步失败');
        }
      } catch {
        alert('同步失败');
      } finally {
        syncBtn.disabled = false;
        syncBtn.textContent = '从商品同步';
      }
    });

    document.querySelectorAll('.delete-entry').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id;
        if (!id || !confirm('删除此条目？')) return;

        try {
          const result = await api.deleteKnowledge(id);
          if (result.success) {
            window.location.reload();
          }
        } catch {
          alert('删除失败');
        }
      });
    });

    document.querySelectorAll('.edit-entry').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const el = e.currentTarget as HTMLElement;
        const title = el.dataset.title || '';
        const content = el.dataset.content || '';
        
        (document.getElementById('entry-title') as HTMLInputElement).value = title;
        (document.getElementById('entry-content') as HTMLTextAreaElement).value = content;
        
        document.getElementById('entry-content')?.focus();
      });
    });
  </script>
</AdminLayout>
