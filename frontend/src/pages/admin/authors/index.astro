---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

// Get authors
const { data: authors } = await supabase
  .from('authors')
  .select('id, name, slug, avatar_url, bio, credentials, social_links, is_active, article_count, created_at')
  .order('name');
---

<AdminLayout title="Authors" activePage="authors">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Authors</h1>
      <p class="text-sm text-gray-500 mt-1">Manage content authors for E-E-A-T compliance</p>
    </div>
    <button id="add-author-btn" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
      Add Author
    </button>
  </div>

  <!-- Authors Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {authors && authors.length > 0 ? authors.map((author) => (
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 group" data-author-id={author.id}>
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0 overflow-hidden">
            {author.avatar_url ? (
              <img src={author.avatar_url} alt={author.name} class="w-full h-full object-cover" />
            ) : (
              <span class="text-2xl font-bold text-gray-400">{author.name.charAt(0)}</span>
            )}
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2">
              <h3 class="font-semibold text-gray-900 truncate">{author.name}</h3>
              {author.is_active ? (
                <span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded-full">Active</span>
              ) : (
                <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded-full">Inactive</span>
              )}
            </div>
            <p class="text-sm text-gray-500 mt-1">@{author.slug}</p>
            {author.bio && (
              <p class="text-sm text-gray-600 mt-2 line-clamp-2">{author.bio}</p>
            )}
          </div>
        </div>

        {author.credentials && author.credentials.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-1">
            {author.credentials.slice(0, 3).map((cred: string) => (
              <span class="px-2 py-0.5 text-xs bg-blue-50 text-blue-700 rounded">{cred}</span>
            ))}
            {author.credentials.length > 3 && (
              <span class="px-2 py-0.5 text-xs bg-gray-50 text-gray-500 rounded">+{author.credentials.length - 3}</span>
            )}
          </div>
        )}

        <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
          <div class="text-sm text-gray-500">
            <span class="font-medium text-gray-900">{author.article_count || 0}</span> articles
          </div>
          <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <button class="edit-author text-primary-600 hover:text-primary-700 text-sm font-medium" data-id={author.id}>
              Edit
            </button>
            <button class="delete-author text-red-600 hover:text-red-700 text-sm font-medium" data-id={author.id}>
              Delete
            </button>
          </div>
        </div>
      </div>
    )) : (
      <div class="col-span-full bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
        <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-1">No authors yet</h3>
        <p class="text-gray-500 mb-4">Add authors to attribute content for better E-E-A-T signals</p>
        <button id="add-first-author-btn" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
          Add First Author
        </button>
      </div>
    )}
  </div>

  <!-- Author Modal -->
  <div id="author-modal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" id="modal-backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-xl shadow-xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <h2 id="modal-title" class="text-lg font-semibold text-gray-900">Add Author</h2>
          <button id="close-modal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <form id="author-form" class="p-6 space-y-4">
          <input type="hidden" id="author-id" name="id" value="" />
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
            <input type="text" id="author-name" name="name" required 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="John Doe" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Slug</label>
            <input type="text" id="author-slug" name="slug" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="john-doe (auto-generated if empty)" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Avatar URL</label>
            <input type="url" id="author-avatar" name="avatar_url" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="https://example.com/avatar.jpg" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
            <textarea id="author-bio" name="bio" rows="3"
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="Brief biography or expertise description..."></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Credentials</label>
            <input type="text" id="author-credentials" name="credentials" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="PhD, Certified Expert, 10+ years experience (comma separated)" />
            <p class="text-xs text-gray-500 mt-1">Separate multiple credentials with commas</p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Twitter</label>
              <input type="url" id="author-twitter" name="twitter" 
                class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
                placeholder="https://twitter.com/..." />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">LinkedIn</label>
              <input type="url" id="author-linkedin" name="linkedin" 
                class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
                placeholder="https://linkedin.com/in/..." />
            </div>
          </div>

          <div class="flex items-center">
            <input type="checkbox" id="author-active" name="is_active" checked
              class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded" />
            <label for="author-active" class="ml-2 text-sm text-gray-700">Active</label>
          </div>

          <div class="flex gap-3 pt-4">
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
              Save Author
            </button>
            <button type="button" id="cancel-btn" class="px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    import { api } from '@lib/api';

    const modal = document.getElementById('author-modal');
    const modalTitle = document.getElementById('modal-title');
    const form = document.getElementById('author-form') as HTMLFormElement;
    const addBtn = document.getElementById('add-author-btn');
    const addFirstBtn = document.getElementById('add-first-author-btn');
    const closeBtn = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-btn');
    const backdrop = document.getElementById('modal-backdrop');

    let editingId: string | null = null;

    function openModal(author?: any) {
      editingId = author?.id || null;
      modalTitle!.textContent = author ? 'Edit Author' : 'Add Author';
      
      // Reset form
      form.reset();
      (document.getElementById('author-id') as HTMLInputElement).value = author?.id || '';
      (document.getElementById('author-name') as HTMLInputElement).value = author?.name || '';
      (document.getElementById('author-slug') as HTMLInputElement).value = author?.slug || '';
      (document.getElementById('author-avatar') as HTMLInputElement).value = author?.avatar_url || '';
      (document.getElementById('author-bio') as HTMLTextAreaElement).value = author?.bio || '';
      (document.getElementById('author-credentials') as HTMLInputElement).value = (author?.credentials || []).join(', ');
      (document.getElementById('author-twitter') as HTMLInputElement).value = author?.social_links?.twitter || '';
      (document.getElementById('author-linkedin') as HTMLInputElement).value = author?.social_links?.linkedin || '';
      (document.getElementById('author-active') as HTMLInputElement).checked = author?.is_active !== false;

      modal?.classList.remove('hidden');
    }

    function closeModal() {
      modal?.classList.add('hidden');
      editingId = null;
    }

    addBtn?.addEventListener('click', () => openModal());
    addFirstBtn?.addEventListener('click', () => openModal());
    closeBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);
    backdrop?.addEventListener('click', closeModal);

    // Edit buttons
    document.querySelectorAll('.edit-author').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = (e.target as HTMLElement).dataset.id;
        if (!id) return;
        
        try {
          const result = await api.getAuthor(id);
          if (result.success && result.data) {
            openModal(result.data);
          }
        } catch (err) {
          console.error('Failed to load author:', err);
        }
      });
    });

    // Delete buttons
    document.querySelectorAll('.delete-author').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = (e.target as HTMLElement).dataset.id;
        if (!id || !confirm('Delete this author? Their content will remain but become unattributed.')) return;
        
        try {
          const result = await api.deleteAuthor(id);
          if (result.success) {
            window.location.reload();
          } else {
            alert('Failed to delete author');
          }
        } catch (err) {
          alert('Failed to delete author');
        }
      });
    });

    // Form submit
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const credentialsStr = formData.get('credentials') as string;
      const credentials = credentialsStr ? credentialsStr.split(',').map(c => c.trim()).filter(Boolean) : [];
      
      const data = {
        name: formData.get('name') as string,
        slug: formData.get('slug') as string || undefined,
        avatar_url: formData.get('avatar_url') as string || undefined,
        bio: formData.get('bio') as string || undefined,
        credentials: credentials.length > 0 ? credentials : undefined,
        social_links: {
          twitter: formData.get('twitter') as string || undefined,
          linkedin: formData.get('linkedin') as string || undefined,
        },
        is_active: (document.getElementById('author-active') as HTMLInputElement).checked,
      };

      // Remove undefined values from social_links
      Object.keys(data.social_links).forEach(key => {
        if (!(data.social_links as any)[key]) delete (data.social_links as any)[key];
      });
      if (Object.keys(data.social_links).length === 0) delete (data as any).social_links;

      try {
        let result;
        if (editingId) {
          result = await api.updateAuthor(editingId, data);
        } else {
          result = await api.createAuthor(data);
        }

        if (result.success) {
          window.location.reload();
        } else {
          alert(result.error || 'Failed to save author');
        }
      } catch (err) {
        alert('Failed to save author');
      }
    });
  </script>
</AdminLayout>
