---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';

// Data loaded dynamically via client-side API calls
const authors: any[] = [];
---

<AdminLayout title="作者" activePage="authors">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">作者</h1>
      <p class="text-sm text-gray-500 mt-1">管理内容作者以符合 E-E-A-T 要求</p>
    </div>
    <button id="add-author-btn" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
      添加作者
    </button>
  </div>

  <!-- Authors Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {authors && authors.length > 0 ? authors.map((author) => (
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 group" data-author-id={author.id}>
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0 overflow-hidden">
            {author.avatar_url ? (
              <img src={author.avatar_url} alt={author.name} class="w-full h-full object-cover" />
            ) : (
              <span class="text-2xl font-bold text-gray-400">{author.name.charAt(0)}</span>
            )}
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2">
              <h3 class="font-semibold text-gray-900 truncate">{author.name}</h3>
              {author.is_active ? (
                <span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded-full">活跃</span>
              ) : (
                <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded-full">不活跃</span>
              )}
            </div>
            <p class="text-sm text-gray-500 mt-1">@{author.slug}</p>
            {author.bio && (
              <p class="text-sm text-gray-600 mt-2 line-clamp-2">{author.bio}</p>
            )}
          </div>
        </div>

        {author.credentials && author.credentials.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-1">
            {author.credentials.slice(0, 3).map((cred: string) => (
              <span class="px-2 py-0.5 text-xs bg-blue-50 text-blue-700 rounded">{cred}</span>
            ))}
            {author.credentials.length > 3 && (
              <span class="px-2 py-0.5 text-xs bg-gray-50 text-gray-500 rounded">+{author.credentials.length - 3}</span>
            )}
          </div>
        )}

        <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
          <div class="text-sm text-gray-500">
            <span class="font-medium text-gray-900">{author.article_count || 0}</span> 篇文章
          </div>
          <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <button class="edit-author text-primary-600 hover:text-primary-700 text-sm font-medium" data-id={author.id}>
              编辑
            </button>
            <button class="delete-author text-red-600 hover:text-red-700 text-sm font-medium" data-id={author.id}>
              删除
            </button>
          </div>
        </div>
      </div>
    )) : (
      <div class="col-span-full bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
        <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-1">暂无作者</h3>
        <p class="text-gray-500 mb-4">添加作者以归属内容，提高 E-E-A-T 信号</p>
        <button id="add-first-author-btn" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
          添加第一个作者
        </button>
      </div>
    )}
  </div>

  <!-- Author Modal -->
  <div id="author-modal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" id="modal-backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-xl shadow-xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <h2 id="modal-title" class="text-lg font-semibold text-gray-900">添加作者</h2>
          <button id="close-modal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <form id="author-form" class="p-6 space-y-4">
          <input type="hidden" id="author-id" name="id" value="" />
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">姓名 *</label>
            <input type="text" id="author-name" name="name" required 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="张三" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">别名</label>
            <input type="text" id="author-slug" name="slug" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="zhang-san（留空自动生成）" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">头像 URL</label>
            <input type="url" id="author-avatar" name="avatar_url" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="https://example.com/avatar.jpg" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">简介</label>
            <textarea id="author-bio" name="bio" rows="3"
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="简短介绍或专业背景..."></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">资质</label>
            <input type="text" id="author-credentials" name="credentials" 
              class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
              placeholder="博士, 认证专家, 10+年经验（逗号分隔）" />
            <p class="text-xs text-gray-500 mt-1">用逗号分隔多个资质</p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Twitter</label>
              <input type="url" id="author-twitter" name="twitter" 
                class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
                placeholder="https://twitter.com/..." />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">LinkedIn</label>
              <input type="url" id="author-linkedin" name="linkedin" 
                class="w-full border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
                placeholder="https://linkedin.com/in/..." />
            </div>
          </div>

          <div class="flex items-center">
            <input type="checkbox" id="author-active" name="is_active" checked
              class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded" />
            <label for="author-active" class="ml-2 text-sm text-gray-700">活跃</label>
          </div>

          <div class="flex gap-3 pt-4">
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
              保存作者
            </button>
            <button type="button" id="cancel-btn" class="px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
              取消
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    import { api } from '@lib/api';

    const modal = document.getElementById('author-modal');
    const modalTitle = document.getElementById('modal-title');
    const form = document.getElementById('author-form') as HTMLFormElement;
    const addBtn = document.getElementById('add-author-btn');
    const addFirstBtn = document.getElementById('add-first-author-btn');
    const closeBtn = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-btn');
    const backdrop = document.getElementById('modal-backdrop');
    const authorsGrid = document.querySelector('.grid.grid-cols-1.md\\:grid-cols-2');

    let editingId: string | null = null;

    // Load authors on init
    async function loadAuthors() {
      try {
        const res = await fetch('/api/authors');
        if (!res.ok) return;
        const json = await res.json();
        if (json.data) renderAuthors(json.data);
      } catch (e) {
        console.error('Failed to load authors:', e);
      }
    }

    function renderAuthors(authors) {
      if (!authorsGrid) return;
      if (authors.length === 0) {
        authorsGrid.innerHTML = `<div class="col-span-full text-center py-12 text-gray-500">暂无作者，点击添加作者按钮创建</div>`;
        return;
      }
      authorsGrid.innerHTML = authors.map(author => `
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 group" data-author-id="${author.id}">
          <div class="flex items-start gap-4">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0 overflow-hidden">
              ${author.avatar_url 
                ? `<img src="${author.avatar_url}" alt="${author.name}" class="w-full h-full object-cover" />`
                : `<span class="text-2xl font-bold text-gray-400">${author.name.charAt(0)}</span>`}
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2">
                <h3 class="font-semibold text-gray-900 truncate">${author.name}</h3>
                ${author.is_active 
                  ? '<span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded-full">活跃</span>'
                  : '<span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded-full">不活跃</span>'}
              </div>
              <p class="text-sm text-gray-500 mt-1">@${author.slug}</p>
              ${author.bio ? `<p class="text-sm text-gray-600 mt-2 line-clamp-2">${author.bio}</p>` : ''}
            </div>
          </div>
          <div class="mt-4 flex justify-end gap-2">
            <button class="edit-author text-sm text-primary-600 hover:underline" data-author='${JSON.stringify(author)}'>编辑</button>
            <button class="delete-author text-sm text-red-600 hover:underline" data-id="${author.id}">删除</button>
          </div>
        </div>
      `).join('');
      attachAuthorEventListeners();
    }

    function attachAuthorEventListeners() {
      document.querySelectorAll('.edit-author').forEach(btn => {
        btn.addEventListener('click', () => {
          const author = JSON.parse(btn.dataset?.author || '{}');
          openModal(author);
        });
      });
      document.querySelectorAll('.delete-author').forEach(btn => {
        btn.addEventListener('click', async () => {
          const id = btn.dataset?.id;
          if (!confirm('删除此作者？')) return;
          const result = await api.deleteAuthor(id);
          if (result.success) loadAuthors();
        });
      });
    }

    loadAuthors();

    function openModal(author?: any) {
      editingId = author?.id || null;
      if (modalTitle) modalTitle.textContent = author ? '编辑作者' : '添加作者';
      
      // Reset form
      form.reset();
      const idEl = document.getElementById('author-id'); if (idEl) idEl.value = author?.id || '';
      const nameEl = document.getElementById('author-name'); if (nameEl) nameEl.value = author?.name || '';
      const slugEl = document.getElementById('author-slug'); if (slugEl) slugEl.value = author?.slug || '';
      const avatarEl = document.getElementById('author-avatar'); if (avatarEl) avatarEl.value = author?.avatar_url || '';
      const bioEl = document.getElementById('author-bio'); if (bioEl) bioEl.value = author?.bio || '';
      const credEl = document.getElementById('author-credentials'); if (credEl) credEl.value = (author?.credentials || []).join(', ');
      const twitterEl = document.getElementById('author-twitter'); if (twitterEl) twitterEl.value = author?.social_links?.twitter || '';
      const linkedinEl = document.getElementById('author-linkedin'); if (linkedinEl) linkedinEl.value = author?.social_links?.linkedin || '';
      const activeEl = document.getElementById('author-active'); if (activeEl) activeEl.checked = author?.is_active !== false;

      modal?.classList.remove('hidden');
    }

    function closeModal() {
      modal?.classList.add('hidden');
      editingId = null;
    }

    addBtn?.addEventListener('click', () => openModal());
    addFirstBtn?.addEventListener('click', () => openModal());
    closeBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);
    backdrop?.addEventListener('click', closeModal);

    // Edit buttons
    document.querySelectorAll('.edit-author').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = e.target?.dataset?.id;
        if (!id) return;
        
        try {
          const result = await api.getAuthor(id);
          if (result.success && result.data) {
            openModal(result.data);
          }
        } catch (err) {
          console.error('Failed to load author:', err);
        }
      });
    });

    // Delete buttons
    document.querySelectorAll('.delete-author').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = e.target?.dataset?.id;
        if (!id || !confirm('删除此作者？其内容将保留但变为未归属。')) return;
        
        try {
          const result = await api.deleteAuthor(id);
          if (result.success) {
            window.location.reload();
          } else {
            alert('删除作者失败');
          }
        } catch (err) {
          alert('删除作者失败');
        }
      });
    });

    // Form submit
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const credentialsStr = formData.get('credentials');
      const credentials = credentialsStr ? credentialsStr.split(',').map(c => c.trim()).filter(Boolean) : [];
      
      const data = {
        name: formData.get('name'),
        slug: formData.get('slug') || undefined,
        avatar_url: formData.get('avatar_url') || undefined,
        bio: formData.get('bio') || undefined,
        credentials: credentials.length > 0 ? credentials : undefined,
        social_links: {
          twitter: formData.get('twitter') || undefined,
          linkedin: formData.get('linkedin') || undefined,
        },
        is_active: document.getElementById('author-active')?.checked,
      };

      // Remove undefined values from social_links
      Object.keys(data.social_links).forEach(key => {
        if (!data.social_links[key]) delete data.social_links[key];
      });
      if (Object.keys(data.social_links).length === 0) delete data.social_links;

      try {
        let result;
        if (editingId) {
          result = await api.updateAuthor(editingId, data);
        } else {
          result = await api.createAuthor(data);
        }

        if (result.success) {
          window.location.reload();
        } else {
          alert(result.error || '保存作者失败');
        }
      } catch (err) {
        alert('保存作者失败');
      }
    });
  </script>
</AdminLayout>
