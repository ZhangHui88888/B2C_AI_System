---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

const { id } = Astro.params;

// Fetch brand details
const { data: brand, error: brandError } = await supabase
  .from('brands')
  .select('*')
  .eq('id', id)
  .single();

if (brandError || !brand) {
  return Astro.redirect('/admin/brands');
}

// Fetch brand user assignments with admin user details
const { data: assignments } = await supabase
  .from('brand_user_assignments')
  .select(`
    *,
    admin_user:admin_users(id, email, name, avatar_url, role, is_active)
  `)
  .eq('brand_id', id)
  .order('created_at', { ascending: false });

// Fetch all admin users for adding new assignments
const { data: adminUsers } = await supabase
  .from('admin_users')
  .select('id, email, name, avatar_url, role, is_active')
  .eq('is_active', true)
  .order('email');

// Get already assigned user IDs
const assignedUserIds = new Set((assignments || []).map(a => a.admin_user_id));
const availableUsers = (adminUsers || []).filter(u => !assignedUserIds.has(u.id));

const roleLabels: Record<string, string> = {
  brand_admin: '品牌管理员',
  editor: '编辑',
  read_only: '只读'
};

const roleBadgeColors: Record<string, string> = {
  brand_admin: 'bg-purple-100 text-purple-700',
  editor: 'bg-blue-100 text-blue-700',
  read_only: 'bg-gray-100 text-gray-600'
};
---

<AdminLayout title={`${brand.name} - Team`} activePage="brands">
  <div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a href="/admin/brands" class="text-gray-500 hover:text-gray-700">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <div>
          <h2 class="text-lg font-semibold text-gray-900">{brand.name} - 团队成员</h2>
          <p class="text-sm text-gray-600">管理谁有权访问此品牌</p>
        </div>
      </div>
      <button id="add-user-btn" class="inline-flex items-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
        添加团队成员
      </button>
    </div>

    <!-- Quick Links -->
    <div class="flex gap-4 text-sm">
      <a href={`/admin/brands/${id}/settings`} class="text-primary-600 hover:text-primary-700">
        ← 品牌设置
      </a>
    </div>

    <!-- Role Legend -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <h3 class="text-sm font-medium text-gray-700 mb-3">角色权限</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="flex items-start gap-3">
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-700">品牌管理员</span>
          <p class="text-sm text-gray-600">完全访问所有品牌功能、设置和团队管理</p>
        </div>
        <div class="flex items-start gap-3">
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-700">编辑</span>
          <p class="text-sm text-gray-600">可管理产品、订单和内容，无权访问设置</p>
        </div>
        <div class="flex items-start gap-3">
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-600">只读</span>
          <p class="text-sm text-gray-600">仅查看品牌数据和分析</p>
        </div>
      </div>
    </div>

    <!-- Team Members List -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-4 border-b border-gray-100">
        <h3 class="text-sm font-medium text-gray-900">团队成员 ({(assignments || []).length})</h3>
      </div>
      
      <div class="divide-y divide-gray-100">
        {assignments && assignments.length > 0 ? (
          assignments.map((assignment) => (
            <div class="p-4 flex items-center justify-between hover:bg-gray-50" data-assignment-id={assignment.id}>
              <div class="flex items-center gap-4">
                {assignment.admin_user?.avatar_url ? (
                  <img src={assignment.admin_user.avatar_url} alt="" class="w-10 h-10 rounded-full" />
                ) : (
                  <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center text-primary-600 font-medium">
                    {(assignment.admin_user?.email || '?').charAt(0).toUpperCase()}
                  </div>
                )}
                <div>
                  <p class="font-medium text-gray-900">
                    {assignment.admin_user?.name || assignment.admin_user?.email}
                  </p>
                  <p class="text-sm text-gray-500">{assignment.admin_user?.email}</p>
                </div>
              </div>
              
              <div class="flex items-center gap-4">
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${roleBadgeColors[assignment.role] || 'bg-gray-100 text-gray-600'}`}>
                  {roleLabels[assignment.role] || assignment.role}
                </span>
                
                <div class="flex items-center gap-2">
                  <button 
                    class="edit-role-btn text-sm text-primary-600 hover:text-primary-700"
                    data-id={assignment.id}
                    data-role={assignment.role}
                    data-user-email={assignment.admin_user?.email}
                  >
                    编辑
                  </button>
                  <button 
                    class="remove-user-btn text-sm text-red-600 hover:text-red-700"
                    data-id={assignment.id}
                    data-user-email={assignment.admin_user?.email}
                  >移除
                  </button>
                </div>
              </div>
            </div>
          ))
        ) : (
          <div class="p-8 text-center text-gray-500">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <p class="font-medium">暂无团队成员</p>
            <p class="text-sm">添加团队成员以授予他们访问此品牌的权限</p>
          </div>
        )}
      </div>
    </div>

    <!-- Brand Owner Info -->
    <div class="bg-blue-50 rounded-xl p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <p class="text-sm font-medium text-blue-900">品牌所有者</p>
          <p class="text-sm text-blue-700">品牌所有者（{brand.owner_email}）始终拥有完全访问权限，不受团队分配影响。超级管理员也可以访问所有品牌。
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Add User Modal -->
  <div id="add-user-modal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" id="add-modal-backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-md">
        <div class="p-6 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">添加团队成员</h3>
        </div>
        <form id="add-user-form" class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">选择用户</label>
            {availableUsers.length > 0 ? (
              <select id="user-select" required class="w-full border-gray-300 rounded-lg">
                <option value="">选择用户...</option>
                {availableUsers.map(user => (
                  <option value={user.id}>{user.email} {user.name ? `(${user.name})` : ''}</option>
                ))}
              </select>
            ) : (
              <div class="p-3 bg-yellow-50 rounded-lg text-sm text-yellow-700">
                所有管理员已分配到此品牌。
                <a href="/admin/users" class="underline ml-1">创建新管理员</a>
              </div>
            )}
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">角色</label>
            <select id="role-select" required class="w-full border-gray-300 rounded-lg">
              <option value="read_only">只读 - 仅查看权限</option>
              <option value="editor" selected>编辑 - 管理产品、订单、内容</option>
              <option value="brand_admin">品牌管理员 - 包含设置的完全访问权限</option>
            </select>
          </div>

          <div class="flex gap-3 pt-4">
            <button type="button" id="cancel-add-btn" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">取消
            </button>
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700" disabled={availableUsers.length === 0}>添加成员
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Role Modal -->
  <div id="edit-role-modal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" id="edit-modal-backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-md">
        <div class="p-6 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">编辑角色</h3>
          <p class="text-sm text-gray-600 mt-1" id="edit-user-email"></p>
        </div>
        <form id="edit-role-form" class="p-6 space-y-4">
          <input type="hidden" id="edit-assignment-id" />
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">角色</label>
            <select id="edit-role-select" required class="w-full border-gray-300 rounded-lg">
              <option value="read_only">只读 - 仅查看权限</option>
              <option value="editor">编辑 - 管理产品、订单、内容</option>
              <option value="brand_admin">品牌管理员 - 包含设置的完全访问权限</option>
            </select>
          </div>

          <div class="flex gap-3 pt-4">
            <button type="button" id="cancel-edit-btn" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">取消
            </button>
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">保存更改
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script define:vars={{ brandId: id }}>
    const API_URL = import.meta.env.PUBLIC_API_URL || '';
    
    // Add user modal
    const addModal = document.getElementById('add-user-modal');
    document.getElementById('add-user-btn')?.addEventListener('click', () => {
      addModal?.classList.remove('hidden');
    });
    document.getElementById('cancel-add-btn')?.addEventListener('click', () => {
      addModal?.classList.add('hidden');
    });
    document.getElementById('add-modal-backdrop')?.addEventListener('click', () => {
      addModal?.classList.add('hidden');
    });

    // Edit role modal
    const editModal = document.getElementById('edit-role-modal');
    document.querySelectorAll('.edit-role-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const assignmentId = btn.dataset.id;
        const currentRole = btn.dataset.role;
        const userEmail = btn.dataset.userEmail;
        
        document.getElementById('edit-assignment-id').value = assignmentId;
        document.getElementById('edit-role-select').value = currentRole;
        document.getElementById('edit-user-email').textContent = userEmail;
        editModal?.classList.remove('hidden');
      });
    });
    document.getElementById('cancel-edit-btn')?.addEventListener('click', () => {
      editModal?.classList.add('hidden');
    });
    document.getElementById('edit-modal-backdrop')?.addEventListener('click', () => {
      editModal?.classList.add('hidden');
    });

    // Add user form
    document.getElementById('add-user-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const adminUserId = document.getElementById('user-select')?.value;
      const role = document.getElementById('role-select')?.value;
      
      if (!adminUserId || !role) return;
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/users`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ admin_user_id: adminUserId, role }),
        });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const err = await res.json();
          alert(err.error || '添加团队成员失败');
        }
      } catch (err) {
        alert('添加团队成员失败');
      }
    });

    // Edit role form
    document.getElementById('edit-role-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const assignmentId = document.getElementById('edit-assignment-id')?.value;
      const role = document.getElementById('edit-role-select')?.value;
      
      if (!assignmentId || !role) return;
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/users/${assignmentId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ role }),
        });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const err = await res.json();
          alert(err.error || '更新角色失败');
        }
      } catch (err) {
        alert('更新角色失败');
      }
    });

    // Remove user
    document.querySelectorAll('.remove-user-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const assignmentId = btn.dataset.id;
        const userEmail = btn.dataset.userEmail;
        
        if (!confirm(`确定要从此品牌移除 ${userEmail} 吗？`)) return;
        
        try {
          const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/users/${assignmentId}`, {
            method: 'DELETE',
          });
          
          if (res.ok) {
            window.location.reload();
          } else {
            const err = await res.json();
            alert(err.error || '移除团队成员失败');
          }
        } catch (err) {
          alert('移除团队成员失败');
        }
      });
    });
  </script>
</AdminLayout>
