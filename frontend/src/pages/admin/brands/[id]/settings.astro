---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

const { id } = Astro.params;

// Fetch brand details
const { data: brand, error } = await supabase
  .from('brands')
  .select('*')
  .eq('id', id)
  .single();

if (error || !brand) {
  return Astro.redirect('/admin/brands');
}

// Fetch brand domains
const { data: domains } = await supabase
  .from('brand_domains')
  .select('*')
  .eq('brand_id', id)
  .order('is_primary', { ascending: false });

// Default theme values
const defaultTheme = {
  primaryColor: '#4F46E5',
  secondaryColor: '#10B981',
  accentColor: '#F59E0B',
  fontFamily: 'Inter',
  headerStyle: 'default',
  footerStyle: 'default',
  buttonStyle: 'rounded'
};

const theme = { ...defaultTheme, ...(brand.theme || {}) };
const socialLinks = brand.social_links || {};
const contactInfo = brand.contact_info || {};
---

<AdminLayout title={`${brand.name} Settings`} activePage="brands">
  <div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a href="/admin/brands" class="text-gray-500 hover:text-gray-700">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <div>
          <h2 class="text-lg font-semibold text-gray-900">{brand.name} Settings</h2>
          <p class="text-sm text-gray-600">Configure brand theme, domains, and contact information</p>
        </div>
      </div>
      <span class={`px-3 py-1 text-sm font-medium rounded-full ${brand.is_active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600'}`}>
        {brand.is_active ? 'Active' : 'Inactive'}
      </span>
    </div>

    <!-- Tabs -->
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8" id="settings-tabs">
        <button class="tab-btn active py-4 px-1 border-b-2 font-medium text-sm border-primary-500 text-primary-600" data-tab="theme">
          Theme
        </button>
        <button class="tab-btn py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="domains">
          Domains
        </button>
        <button class="tab-btn py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="contact">
          Contact Info
        </button>
        <button class="tab-btn py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="social">
          Social Links
        </button>
      </nav>
    </div>

    <!-- Theme Settings Tab -->
    <div id="tab-theme" class="tab-content bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Theme Customization</h3>
      
      <form id="theme-form" class="space-y-6">
        <!-- Colors -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Primary Color</label>
            <div class="flex items-center gap-3">
              <input type="color" id="primaryColor" value={theme.primaryColor} class="h-10 w-16 rounded border border-gray-300 cursor-pointer" />
              <input type="text" id="primaryColorText" value={theme.primaryColor} class="flex-1 border-gray-300 rounded-lg text-sm font-mono" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Secondary Color</label>
            <div class="flex items-center gap-3">
              <input type="color" id="secondaryColor" value={theme.secondaryColor} class="h-10 w-16 rounded border border-gray-300 cursor-pointer" />
              <input type="text" id="secondaryColorText" value={theme.secondaryColor} class="flex-1 border-gray-300 rounded-lg text-sm font-mono" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Accent Color</label>
            <div class="flex items-center gap-3">
              <input type="color" id="accentColor" value={theme.accentColor} class="h-10 w-16 rounded border border-gray-300 cursor-pointer" />
              <input type="text" id="accentColorText" value={theme.accentColor} class="flex-1 border-gray-300 rounded-lg text-sm font-mono" />
            </div>
          </div>
        </div>

        <!-- Typography & Style -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Font Family</label>
            <select id="fontFamily" class="w-full border-gray-300 rounded-lg">
              <option value="Inter" selected={theme.fontFamily === 'Inter'}>Inter</option>
              <option value="Roboto" selected={theme.fontFamily === 'Roboto'}>Roboto</option>
              <option value="Open Sans" selected={theme.fontFamily === 'Open Sans'}>Open Sans</option>
              <option value="Poppins" selected={theme.fontFamily === 'Poppins'}>Poppins</option>
              <option value="Montserrat" selected={theme.fontFamily === 'Montserrat'}>Montserrat</option>
              <option value="Playfair Display" selected={theme.fontFamily === 'Playfair Display'}>Playfair Display</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Button Style</label>
            <select id="buttonStyle" class="w-full border-gray-300 rounded-lg">
              <option value="rounded" selected={theme.buttonStyle === 'rounded'}>Rounded</option>
              <option value="square" selected={theme.buttonStyle === 'square'}>Square</option>
              <option value="pill" selected={theme.buttonStyle === 'pill'}>Pill</option>
            </select>
          </div>
        </div>

        <!-- Header & Footer Style -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Header Style</label>
            <select id="headerStyle" class="w-full border-gray-300 rounded-lg">
              <option value="default" selected={theme.headerStyle === 'default'}>Default</option>
              <option value="centered" selected={theme.headerStyle === 'centered'}>Centered Logo</option>
              <option value="minimal" selected={theme.headerStyle === 'minimal'}>Minimal</option>
              <option value="transparent" selected={theme.headerStyle === 'transparent'}>Transparent</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Footer Style</label>
            <select id="footerStyle" class="w-full border-gray-300 rounded-lg">
              <option value="default" selected={theme.footerStyle === 'default'}>Default (4 columns)</option>
              <option value="simple" selected={theme.footerStyle === 'simple'}>Simple</option>
              <option value="centered" selected={theme.footerStyle === 'centered'}>Centered</option>
            </select>
          </div>
        </div>

        <!-- Brand Assets -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Logo URL</label>
            <input type="url" id="logoUrl" value={brand.logo_url || ''} placeholder="https://..." class="w-full border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Favicon URL</label>
            <input type="url" id="faviconUrl" value={brand.favicon_url || ''} placeholder="https://..." class="w-full border-gray-300 rounded-lg" />
          </div>
        </div>

        <!-- Custom CSS -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Custom CSS</label>
          <textarea id="customCss" rows="6" class="w-full border-gray-300 rounded-lg font-mono text-sm" placeholder="/* Add custom CSS here */">{brand.custom_css || ''}</textarea>
          <p class="text-xs text-gray-500 mt-1">Advanced: Add custom CSS to override default styles</p>
        </div>

        <!-- Preview -->
        <div class="border-t pt-6">
          <h4 class="text-sm font-medium text-gray-700 mb-4">Preview</h4>
          <div id="theme-preview" class="p-6 border rounded-lg bg-gray-50">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center text-white font-bold" id="preview-logo" style={`background-color: ${theme.primaryColor}`}>
                {brand.name.charAt(0)}
              </div>
              <span class="font-semibold" id="preview-name" style={`font-family: ${theme.fontFamily}`}>{brand.name}</span>
            </div>
            <div class="flex gap-3">
              <button type="button" id="preview-btn-primary" class="px-4 py-2 text-white text-sm font-medium" style={`background-color: ${theme.primaryColor}; border-radius: ${theme.buttonStyle === 'pill' ? '9999px' : theme.buttonStyle === 'square' ? '0' : '0.5rem'}`}>
                Primary Button
              </button>
              <button type="button" id="preview-btn-secondary" class="px-4 py-2 text-white text-sm font-medium" style={`background-color: ${theme.secondaryColor}; border-radius: ${theme.buttonStyle === 'pill' ? '9999px' : theme.buttonStyle === 'square' ? '0' : '0.5rem'}`}>
                Secondary Button
              </button>
              <button type="button" id="preview-btn-accent" class="px-4 py-2 text-white text-sm font-medium" style={`background-color: ${theme.accentColor}; border-radius: ${theme.buttonStyle === 'pill' ? '9999px' : theme.buttonStyle === 'square' ? '0' : '0.5rem'}`}>
                Accent Button
              </button>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <button type="submit" class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
            Save Theme Settings
          </button>
        </div>
      </form>
    </div>

    <!-- Domains Tab -->
    <div id="tab-domains" class="tab-content hidden bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-medium text-gray-900">Domain Configuration</h3>
        <button id="add-domain-btn" class="px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700">
          Add Domain
        </button>
      </div>

      <div class="space-y-4" id="domains-list">
        {domains && domains.length > 0 ? (
          domains.map((domain) => (
            <div class="flex items-center justify-between p-4 border rounded-lg" data-domain-id={domain.id}>
              <div class="flex items-center gap-4">
                <div class={`w-3 h-3 rounded-full ${domain.dns_verified ? 'bg-green-500' : 'bg-yellow-500'}`}></div>
                <div>
                  <p class="font-medium text-gray-900">{domain.domain}</p>
                  <div class="flex items-center gap-2 text-sm text-gray-500">
                    {domain.is_primary && <span class="text-primary-600 font-medium">Primary</span>}
                    <span>SSL: {domain.ssl_status}</span>
                    {domain.dns_verified ? (
                      <span class="text-green-600">Verified</span>
                    ) : (
                      <span class="text-yellow-600">Pending verification</span>
                    )}
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                {!domain.is_primary && (
                  <button class="set-primary-btn text-sm text-primary-600 hover:text-primary-700" data-id={domain.id}>
                    Set Primary
                  </button>
                )}
                <button class="verify-domain-btn text-sm text-gray-600 hover:text-gray-700" data-id={domain.id}>
                  Verify
                </button>
                <button class="delete-domain-btn text-sm text-red-600 hover:text-red-700" data-id={domain.id}>
                  Remove
                </button>
              </div>
            </div>
          ))
        ) : (
          <div class="text-center py-8 text-gray-500">
            <p>No custom domains configured</p>
            <p class="text-sm">Add a custom domain to use with this brand</p>
          </div>
        )}
      </div>

      <div class="mt-6 p-4 bg-blue-50 rounded-lg">
        <h4 class="font-medium text-blue-900 mb-2">DNS Configuration</h4>
        <p class="text-sm text-blue-700 mb-3">Point your domain to our servers using the following DNS records:</p>
        <div class="bg-white rounded p-3 font-mono text-sm">
          <p><span class="text-gray-500">Type:</span> CNAME</p>
          <p><span class="text-gray-500">Name:</span> @ or www</p>
          <p><span class="text-gray-500">Value:</span> cname.yourplatform.com</p>
        </div>
      </div>
    </div>

    <!-- Contact Info Tab -->
    <div id="tab-contact" class="tab-content hidden bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Contact Information</h3>
      
      <form id="contact-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Business Email</label>
            <input type="email" id="contactEmail" value={contactInfo.email || ''} placeholder="hello@example.com" class="w-full border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
            <input type="tel" id="contactPhone" value={contactInfo.phone || ''} placeholder="+1 (555) 123-4567" class="w-full border-gray-300 rounded-lg" />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Business Address</label>
          <textarea id="contactAddress" rows="3" class="w-full border-gray-300 rounded-lg" placeholder="123 Main St, City, State, ZIP">{contactInfo.address || ''}</textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Support Hours</label>
            <input type="text" id="contactHours" value={contactInfo.hours || ''} placeholder="Mon-Fri 9am-5pm EST" class="w-full border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Support Email</label>
            <input type="email" id="contactSupport" value={contactInfo.support_email || ''} placeholder="support@example.com" class="w-full border-gray-300 rounded-lg" />
          </div>
        </div>

        <div class="flex justify-end">
          <button type="submit" class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
            Save Contact Info
          </button>
        </div>
      </form>
    </div>

    <!-- Social Links Tab -->
    <div id="tab-social" class="tab-content hidden bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Social Media Links</h3>
      
      <form id="social-form" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </div>
            <input type="url" id="socialFacebook" value={socialLinks.facebook || ''} placeholder="https://facebook.com/..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400 rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </div>
            <input type="url" id="socialInstagram" value={socialLinks.instagram || ''} placeholder="https://instagram.com/..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-black rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
            </div>
            <input type="url" id="socialTiktok" value={socialLinks.tiktok || ''} placeholder="https://tiktok.com/@..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-sky-500 rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </div>
            <input type="url" id="socialTwitter" value={socialLinks.twitter || ''} placeholder="https://x.com/..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            </div>
            <input type="url" id="socialYoutube" value={socialLinks.youtube || ''} placeholder="https://youtube.com/..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-red-500 rounded-lg flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
            </div>
            <input type="url" id="socialPinterest" value={socialLinks.pinterest || ''} placeholder="https://pinterest.com/..." class="flex-1 border-gray-300 rounded-lg" />
          </div>
        </div>

        <div class="flex justify-end pt-4">
          <button type="submit" class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
            Save Social Links
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Add Domain Modal -->
  <div id="domain-modal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/50" id="domain-modal-backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-md">
        <div class="p-6 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">Add Custom Domain</h3>
        </div>
        <form id="domain-form" class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Domain Name</label>
            <input type="text" id="new-domain" required class="w-full border-gray-300 rounded-lg" placeholder="www.example.com" />
            <p class="text-xs text-gray-500 mt-1">Enter without https://</p>
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="new-domain-primary" class="h-4 w-4 text-primary-600 rounded border-gray-300" />
            <label for="new-domain-primary" class="ml-2 text-sm text-gray-700">Set as primary domain</label>
          </div>
          <div class="flex gap-3 pt-4">
            <button type="button" id="cancel-domain-btn" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
              Cancel
            </button>
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
              Add Domain
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script define:vars={{ brandId: id }}>
    const API_URL = import.meta.env.PUBLIC_API_URL || '';

    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const tabId = btn.dataset.tab;
        
        // Update tab buttons
        document.querySelectorAll('.tab-btn').forEach(b => {
          b.classList.remove('active', 'border-primary-500', 'text-primary-600');
          b.classList.add('border-transparent', 'text-gray-500');
        });
        btn.classList.add('active', 'border-primary-500', 'text-primary-600');
        btn.classList.remove('border-transparent', 'text-gray-500');
        
        // Show/hide tab content
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(`tab-${tabId}`)?.classList.remove('hidden');
      });
    });

    // Color picker sync
    ['primary', 'secondary', 'accent'].forEach(type => {
      const colorInput = document.getElementById(`${type}Color`);
      const textInput = document.getElementById(`${type}ColorText`);
      
      colorInput?.addEventListener('input', (e) => {
        textInput.value = e.target.value;
        updatePreview();
      });
      
      textInput?.addEventListener('input', (e) => {
        if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
          colorInput.value = e.target.value;
          updatePreview();
        }
      });
    });

    // Update preview
    function updatePreview() {
      const primary = document.getElementById('primaryColor').value;
      const secondary = document.getElementById('secondaryColor').value;
      const accent = document.getElementById('accentColor').value;
      const font = document.getElementById('fontFamily').value;
      const btnStyle = document.getElementById('buttonStyle').value;
      const radius = btnStyle === 'pill' ? '9999px' : btnStyle === 'square' ? '0' : '0.5rem';
      
      document.getElementById('preview-logo').style.backgroundColor = primary;
      document.getElementById('preview-name').style.fontFamily = font;
      
      const btnPrimary = document.getElementById('preview-btn-primary');
      const btnSecondary = document.getElementById('preview-btn-secondary');
      const btnAccent = document.getElementById('preview-btn-accent');
      
      btnPrimary.style.backgroundColor = primary;
      btnPrimary.style.borderRadius = radius;
      btnSecondary.style.backgroundColor = secondary;
      btnSecondary.style.borderRadius = radius;
      btnAccent.style.backgroundColor = accent;
      btnAccent.style.borderRadius = radius;
    }

    // Listen for style changes
    ['fontFamily', 'buttonStyle'].forEach(id => {
      document.getElementById(id)?.addEventListener('change', updatePreview);
    });

    // Theme form submission
    document.getElementById('theme-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const theme = {
        primaryColor: document.getElementById('primaryColor').value,
        secondaryColor: document.getElementById('secondaryColor').value,
        accentColor: document.getElementById('accentColor').value,
        fontFamily: document.getElementById('fontFamily').value,
        buttonStyle: document.getElementById('buttonStyle').value,
        headerStyle: document.getElementById('headerStyle').value,
        footerStyle: document.getElementById('footerStyle').value,
      };
      
      const data = {
        theme,
        logo_url: document.getElementById('logoUrl').value || null,
        favicon_url: document.getElementById('faviconUrl').value || null,
        custom_css: document.getElementById('customCss').value || null,
      };
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });
        
        if (res.ok) {
          alert('Theme settings saved successfully!');
        } else {
          const err = await res.json();
          alert(err.error || 'Failed to save theme settings');
        }
      } catch (err) {
        alert('Failed to save theme settings');
      }
    });

    // Contact form submission
    document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const contact_info = {
        email: document.getElementById('contactEmail').value,
        phone: document.getElementById('contactPhone').value,
        address: document.getElementById('contactAddress').value,
        hours: document.getElementById('contactHours').value,
        support_email: document.getElementById('contactSupport').value,
      };
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ contact_info }),
        });
        
        if (res.ok) {
          alert('Contact information saved successfully!');
        } else {
          const err = await res.json();
          alert(err.error || 'Failed to save contact information');
        }
      } catch (err) {
        alert('Failed to save contact information');
      }
    });

    // Social form submission
    document.getElementById('social-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const social_links = {
        facebook: document.getElementById('socialFacebook').value || null,
        instagram: document.getElementById('socialInstagram').value || null,
        tiktok: document.getElementById('socialTiktok').value || null,
        twitter: document.getElementById('socialTwitter').value || null,
        youtube: document.getElementById('socialYoutube').value || null,
        pinterest: document.getElementById('socialPinterest').value || null,
      };
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ social_links }),
        });
        
        if (res.ok) {
          alert('Social links saved successfully!');
        } else {
          const err = await res.json();
          alert(err.error || 'Failed to save social links');
        }
      } catch (err) {
        alert('Failed to save social links');
      }
    });

    // Domain modal
    const domainModal = document.getElementById('domain-modal');
    document.getElementById('add-domain-btn')?.addEventListener('click', () => {
      domainModal?.classList.remove('hidden');
    });
    document.getElementById('cancel-domain-btn')?.addEventListener('click', () => {
      domainModal?.classList.add('hidden');
    });
    document.getElementById('domain-modal-backdrop')?.addEventListener('click', () => {
      domainModal?.classList.add('hidden');
    });

    // Add domain form
    document.getElementById('domain-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const domain = document.getElementById('new-domain').value.trim();
      const isPrimary = document.getElementById('new-domain-primary').checked;
      
      try {
        const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/domains`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ domain, is_primary: isPrimary }),
        });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const err = await res.json();
          alert(err.error || 'Failed to add domain');
        }
      } catch (err) {
        alert('Failed to add domain');
      }
    });

    // Domain actions
    document.querySelectorAll('.delete-domain-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const domainId = btn.dataset.id;
        if (!confirm('Are you sure you want to remove this domain?')) return;
        
        try {
          const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/domains/${domainId}`, {
            method: 'DELETE',
          });
          
          if (res.ok) {
            window.location.reload();
          } else {
            const err = await res.json();
            alert(err.error || 'Failed to remove domain');
          }
        } catch (err) {
          alert('Failed to remove domain');
        }
      });
    });

    document.querySelectorAll('.set-primary-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const domainId = btn.dataset.id;
        
        try {
          const res = await fetch(`${API_URL}/api/admin/brands/${brandId}/domains/${domainId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ is_primary: true }),
          });
          
          if (res.ok) {
            window.location.reload();
          } else {
            const err = await res.json();
            alert(err.error || 'Failed to set primary domain');
          }
        } catch (err) {
          alert('Failed to set primary domain');
        }
      });
    });
  </script>
</AdminLayout>
