---
import Layout from '@layouts/Layout.astro';
import { supabase } from '@lib/supabase';
import { fetchSiteConfig } from '@lib/site-config';

const orderId = Astro.url.searchParams.get('order');
const email = Astro.url.searchParams.get('email');

const siteConfig = await fetchSiteConfig(Astro.request);
const brand = siteConfig?.brand;
if (!brand) {
  return new Response('Site not found', { status: 404 });
}

let order = null;
let error = '';
let products: Array<{ product_id: string; name: string; image?: string }> = [];

if (!orderId || !email) {
  error = 'Invalid review link. Please use the link from your email.';
} else {
  // Fetch order
  const { data, error: fetchError } = await supabase
    .from('orders')
    .select('id, customer_email, customer_name, items, status, brand_id')
    .eq('brand_id', brand.id)
    .eq('id', orderId)
    .eq('customer_email', email)
    .single();

  if (fetchError || !data) {
    error = 'Order not found or email does not match.';
  } else if (data.status !== 'delivered') {
    error = 'You can only review products after your order has been delivered.';
  } else {
    order = data;
    products = (data.items || []).map((item: any) => ({
      product_id: item.product_id,
      name: item.name || 'Product',
      image: item.image || null,
    }));
  }
}
---

<Layout title="Write a Review">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-2xl mx-auto px-4">
      {error ? (
        <div class="bg-white rounded-xl shadow-sm p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-red-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Unable to Load Review Form</h2>
          <p class="text-gray-600">{error}</p>
          <a href="/" class="inline-block mt-6 text-primary-600 hover:text-primary-700 font-medium">
            Return to Homepage
          </a>
        </div>
      ) : (
        <div class="space-y-6">
          <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-900">Share Your Experience</h1>
            <p class="text-gray-600 mt-2">Hi {order?.customer_name || 'there'}! We'd love to hear about your purchase.</p>
          </div>

          {products.length === 0 ? (
            <div class="bg-white rounded-xl shadow-sm p-8 text-center">
              <p class="text-gray-600">No products found in this order.</p>
            </div>
          ) : (
            products.map((product, index) => (
              <div class="bg-white rounded-xl shadow-sm overflow-hidden review-card" data-product-id={product.product_id} data-index={index}>
                <div class="p-6 border-b border-gray-100">
                  <div class="flex items-center gap-4">
                    {product.image ? (
                      <img src={product.image} alt={product.name} class="w-16 h-16 rounded-lg object-cover" />
                    ) : (
                      <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                      </div>
                    )}
                    <div>
                      <h3 class="font-semibold text-gray-900">{product.name}</h3>
                      <p class="text-sm text-gray-500">How would you rate this product?</p>
                    </div>
                  </div>
                </div>

                <form class="review-form p-6 space-y-6" data-product-id={product.product_id}>
                  <!-- Star Rating -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Your Rating *</label>
                    <div class="star-rating flex gap-1" data-rating="0">
                      {[1, 2, 3, 4, 5].map((star) => (
                        <button type="button" class="star-btn p-1 text-gray-300 hover:text-yellow-400 transition-colors" data-star={star}>
                          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        </button>
                      ))}
                    </div>
                    <input type="hidden" name="rating" value="0" class="rating-input" required />
                  </div>

                  <!-- Review Title -->
                  <div>
                    <label for={`title-${index}`} class="block text-sm font-medium text-gray-700 mb-1">Review Title</label>
                    <input
                      type="text"
                      id={`title-${index}`}
                      name="title"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                      placeholder="Summarize your experience"
                      maxlength="100"
                    />
                  </div>

                  <!-- Review Content -->
                  <div>
                    <label for={`content-${index}`} class="block text-sm font-medium text-gray-700 mb-1">Your Review</label>
                    <textarea
                      id={`content-${index}`}
                      name="content"
                      rows="4"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                      placeholder="Share your thoughts about this product..."
                    ></textarea>
                    <p class="text-xs text-gray-500 mt-1">Your honest feedback helps other customers make informed decisions.</p>
                  </div>

                  <!-- Reviewer Name -->
                  <div>
                    <label for={`name-${index}`} class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
                    <input
                      type="text"
                      id={`name-${index}`}
                      name="reviewer_name"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                      placeholder="How should we display your name?"
                      value={order?.customer_name || ''}
                    />
                  </div>

                  <!-- Hidden Fields -->
                  <input type="hidden" name="reviewer_email" value={email} />
                  <input type="hidden" name="product_id" value={product.product_id} />

                  <!-- Submit Button -->
                  <div class="pt-2">
                    <button
                      type="submit"
                      class="w-full px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      Submit Review
                    </button>
                  </div>

                  <!-- Success Message -->
                  <div class="success-message hidden text-center py-4">
                    <svg class="mx-auto h-10 w-10 text-green-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-green-600 font-medium">Thank you for your review!</p>
                    <p class="text-sm text-gray-500 mt-1">Your review has been submitted and is pending approval.</p>
                  </div>
                </form>
              </div>
            ))
          )}

          <div class="text-center text-sm text-gray-500">
            <p>Your review will be published after moderation.</p>
          </div>
        </div>
      )}
    </div>
  </div>

  <script>
    const API_URL = import.meta.env.PUBLIC_API_URL || '';

    document.querySelectorAll('.review-form').forEach((form) => {
      const starRating = form.querySelector('.star-rating');
      const ratingInput = form.querySelector('.rating-input') as HTMLInputElement;
      const starBtns = form.querySelectorAll('.star-btn');
      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const successMessage = form.querySelector('.success-message');

      // Star rating interaction
      starBtns.forEach((btn) => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          const star = parseInt((btn as HTMLElement).dataset.star || '0');
          ratingInput.value = star.toString();
          starRating?.setAttribute('data-rating', star.toString());
          
          // Update star colors
          starBtns.forEach((s, i) => {
            if (i < star) {
              s.classList.remove('text-gray-300');
              s.classList.add('text-yellow-400');
            } else {
              s.classList.add('text-gray-300');
              s.classList.remove('text-yellow-400');
            }
          });
        });

        // Hover effect
        btn.addEventListener('mouseenter', () => {
          const star = parseInt((btn as HTMLElement).dataset.star || '0');
          starBtns.forEach((s, i) => {
            if (i < star) {
              s.classList.add('text-yellow-400');
            }
          });
        });

        btn.addEventListener('mouseleave', () => {
          const currentRating = parseInt(starRating?.getAttribute('data-rating') || '0');
          starBtns.forEach((s, i) => {
            if (i >= currentRating) {
              s.classList.remove('text-yellow-400');
              s.classList.add('text-gray-300');
            }
          });
        });
      });

      // Form submission
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form as HTMLFormElement);
        const rating = parseInt(formData.get('rating') as string);

        if (!rating || rating < 1 || rating > 5) {
          alert('Please select a star rating');
          return;
        }

        const data = {
          product_id: formData.get('product_id'),
          rating,
          title: formData.get('title') || undefined,
          content: formData.get('content') || undefined,
          reviewer_name: formData.get('reviewer_name') || 'Anonymous',
          reviewer_email: formData.get('reviewer_email'),
        };

        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';

        try {
          const res = await fetch(`${API_URL}/api/reviews`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });

          const result = await res.json();

          if (res.ok && result.success) {
            // Hide form fields, show success
            const formFields = form.querySelectorAll('div:not(.success-message)');
            formFields.forEach((field) => (field as HTMLElement).style.display = 'none');
            successMessage?.classList.remove('hidden');
          } else {
            alert(result.error || 'Failed to submit review. Please try again.');
            submitBtn.disabled = false;
            submitBtn.textContent = 'Submit Review';
          }
        } catch {
          alert('Failed to submit review. Please try again.');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Submit Review';
        }
      });
    });
  </script>
</Layout>
