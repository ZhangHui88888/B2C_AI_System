---
export const prerender = false;

import { fetchSiteConfig } from '@lib/site-config';

const siteConfig = await fetchSiteConfig(Astro.request);
const brand = siteConfig?.brand;
if (!brand) {
  return new Response('Site not found', { status: 404 });
}

const envVars = {
  PUBLIC_SUPABASE_URL: import.meta.env.PUBLIC_SUPABASE_URL || 'NOT SET',
  PUBLIC_SUPABASE_ANON_KEY: import.meta.env.PUBLIC_SUPABASE_ANON_KEY ? 'SET (hidden)' : 'NOT SET',
  PUBLIC_API_URL: import.meta.env.PUBLIC_API_URL || 'NOT SET',
  PUBLIC_STRIPE_PUBLISHABLE_KEY: import.meta.env.PUBLIC_STRIPE_PUBLISHABLE_KEY ? 'SET (hidden)' : 'NOT SET',
};

let workerStatus = 'Not tested';
let workerError = '';

async function fetchJson(url: string, init?: RequestInit): Promise<any | null> {
  try {
    const res = await fetch(url, init);
    if (!res.ok) return null;
    return await res.json();
  } catch {
    return null;
  }
}

try {
  const apiOrigin = new URL(Astro.request.url).origin;

  const [categoriesData, productsData] = await Promise.all([
    fetchJson(new URL('/api/categories', apiOrigin).toString()),
    fetchJson(new URL('/api/products/list', apiOrigin).toString(), {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ page: 1, limit: 1, sort: 'newest' }),
    }),
  ]);

  if (!categoriesData || !productsData) {
    workerStatus = 'Error';
    workerError = 'Failed to fetch Worker public APIs.';
  } else {
    workerStatus = 'Connected';
  }
} catch (e) {
  workerStatus = 'Exception';
  workerError = e instanceof Error ? e.message : String(e);
}
---

