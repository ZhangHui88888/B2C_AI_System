---
export const prerender = false;

import { fetchSiteConfig } from '@lib/site-config';

const siteConfig = await fetchSiteConfig(Astro.request);
const brand = siteConfig?.brand;
if (!brand) {
  return new Response('Site not found', { status: 404 });
}

const envVars = {
  PUBLIC_SUPABASE_URL: import.meta.env.PUBLIC_SUPABASE_URL || 'NOT SET',
  PUBLIC_SUPABASE_ANON_KEY: import.meta.env.PUBLIC_SUPABASE_ANON_KEY ? 'SET (hidden)' : 'NOT SET',
  PUBLIC_API_URL: import.meta.env.PUBLIC_API_URL || 'NOT SET',
  PUBLIC_STRIPE_PUBLISHABLE_KEY: import.meta.env.PUBLIC_STRIPE_PUBLISHABLE_KEY ? 'SET (hidden)' : 'NOT SET',
};

let supabaseStatus = 'Not tested';
let supabaseError = '';

try {
  const { createClient } = await import('@supabase/supabase-js');
  const url = import.meta.env.PUBLIC_SUPABASE_URL;
  const key = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
  
  if (url && key) {
    const client = createClient(url, key);
    const { data, error } = await client.from('products').select('id').eq('brand_id', brand.id).limit(1);
    if (error) {
      supabaseStatus = 'Error';
      supabaseError = error.message;
    } else {
      supabaseStatus = 'Connected';
    }
  } else {
    supabaseStatus = 'Missing credentials';
  }
} catch (e) {
  supabaseStatus = 'Exception';
  supabaseError = e instanceof Error ? e.message : String(e);
}
---

