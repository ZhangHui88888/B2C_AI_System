---
import Layout from '@layouts/Layout.astro';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import PaymentBadges from '@components/trust/PaymentBadges.astro';
import SSLBadge from '@components/trust/SSLBadge.astro';

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://example.com';
const breadcrumbItems = [
  { name: 'Home', url: siteUrl },
  { name: 'Checkout', url: new URL('/checkout', siteUrl).toString() },
];
---

<Layout title="Checkout" description="Complete your purchase.">
  <Fragment slot="head">
    <BreadcrumbSchema items={breadcrumbItems} />
    <script src="https://js.stripe.com/v3/"></script>
  </Fragment>

  <main class="container-custom">
    <section class="section">
      <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-4">
        <div>
          <h1>Checkout</h1>
          <p class="mt-3 text-gray-600">Enter your details and review your order.</p>
        </div>
        <div class="flex items-center gap-3">
          <SSLBadge />
        </div>
      </div>

      <div class="mt-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
        <div class="lg:col-span-7">
          <div class="card p-5">
            <div class="flex items-center justify-between">
              <div class="text-sm font-semibold text-gray-900">Checkout steps</div>
              <div class="text-xs text-gray-500">Step 1: info → Step 2: payment → Step 3: confirm</div>
            </div>
            <div class="mt-4 grid grid-cols-3 gap-2 text-xs">
              <div class="px-3 py-2 rounded-lg bg-primary-50 text-primary-700 font-semibold text-center">1. Info</div>
              <div class="px-3 py-2 rounded-lg bg-gray-50 text-gray-700 font-semibold text-center">2. Payment</div>
              <div class="px-3 py-2 rounded-lg bg-gray-50 text-gray-700 font-semibold text-center">3. Confirm</div>
            </div>
          </div>

          <div class="card p-5">
            <div class="flex items-center justify-between gap-3">
              <div class="font-semibold text-gray-900">Step 1: Information</div>
              <div class="text-xs text-gray-500">We will collect payment after placing the order.</div>
            </div>

            <form id="checkout-form" class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="sm:col-span-2">
                <label class="text-sm font-medium text-gray-900">Email</label>
                <input id="co-email" class="input mt-2" type="email" autocomplete="email" required />
              </div>
              <div>
                <label class="text-sm font-medium text-gray-900">Full name</label>
                <input id="co-name" class="input mt-2" type="text" autocomplete="name" required />
              </div>
              <div>
                <label class="text-sm font-medium text-gray-900">Phone</label>
                <input id="co-phone" class="input mt-2" type="tel" autocomplete="tel" />
              </div>
              <div class="sm:col-span-2">
                <label class="text-sm font-medium text-gray-900">Address</label>
                <input id="co-address" class="input mt-2" type="text" autocomplete="street-address" required />
              </div>
              <div>
                <label class="text-sm font-medium text-gray-900">City</label>
                <input id="co-city" class="input mt-2" type="text" autocomplete="address-level2" required />
              </div>
              <div>
                <label class="text-sm font-medium text-gray-900">Postal code</label>
                <input id="co-zip" class="input mt-2" type="text" autocomplete="postal-code" required />
              </div>
              <div class="sm:col-span-2">
                <label class="text-sm font-medium text-gray-900">Country</label>
                <input id="co-country" class="input mt-2" type="text" autocomplete="country-name" required />
              </div>

              <div class="sm:col-span-2 pt-2 flex flex-col sm:flex-row gap-3">
                <a href="/cart" class="btn-outline py-2 px-4 text-sm text-center">Back to cart</a>
                <button id="co-submit" class="btn-primary py-2 px-4 text-sm" type="submit">Continue to payment</button>
              </div>
            </form>

            <div id="co-empty-cta" class="hidden mt-6 card p-4 border border-gray-200 bg-gray-50 text-gray-800">
              Your cart is empty. <a class="text-primary-600 hover:text-primary-700" href="/products">Browse products</a>.
            </div>

            <div id="checkout-alert" class="hidden mt-6 card p-4 border border-amber-200 bg-amber-50 text-amber-900"></div>
          </div>

          <div id="payment-card" class="hidden card p-5">
            <div class="flex items-center justify-between gap-3">
              <div class="font-semibold text-gray-900">Step 2: Payment</div>
              <div id="payment-status" class="text-xs text-gray-500"></div>
            </div>

            <div id="payment-element" class="mt-6"></div>

            <div id="payment-message" class="hidden mt-4 text-sm text-amber-900"></div>

            <div class="mt-6 flex flex-col sm:flex-row gap-3">
              <button id="pay-now" class="btn-primary py-2 px-4 text-sm" type="button">Pay now</button>
              <a href="/cart" class="btn-outline py-2 px-4 text-sm text-center">Edit cart</a>
            </div>
          </div>

          <div class="mt-6">
            <PaymentBadges />
          </div>
        </div>

        <aside class="lg:col-span-5">
          <div class="card p-5 sticky top-24">
            <div class="font-semibold text-gray-900">Order summary</div>
            <div id="co-items" class="mt-4 space-y-3"></div>
            <div id="co-empty" class="hidden mt-6 text-gray-600">Your cart is empty.</div>

            <!-- Coupon Code -->
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="flex gap-2">
                <input type="text" id="coupon-input" placeholder="Coupon code" class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 uppercase" />
                <button type="button" id="apply-coupon" class="px-4 py-2 text-sm font-medium text-primary-600 border border-primary-600 rounded-lg hover:bg-primary-50 transition-colors">Apply</button>
              </div>
              <div id="coupon-message" class="hidden mt-2 text-sm"></div>
              <div id="coupon-applied" class="hidden mt-2 flex items-center justify-between text-sm">
                <div class="flex items-center gap-2">
                  <span class="text-green-600 font-medium" id="coupon-code-display"></span>
                  <button type="button" id="remove-coupon" class="text-gray-400 hover:text-red-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                  </button>
                </div>
                <span class="text-green-600 font-medium" id="coupon-discount">-$0.00</span>
              </div>
            </div>

            <div class="mt-4 border-t border-gray-200 pt-4 space-y-2 text-sm">
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Subtotal</span>
                <span id="co-subtotal" class="font-semibold text-gray-900">$0.00</span>
              </div>
              <div id="discount-row" class="hidden flex items-center justify-between text-green-600">
                <span>Discount</span>
                <span id="co-discount">-$0.00</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Shipping</span>
                <span class="text-gray-900">Calculated later</span>
              </div>
              <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-gray-900 font-semibold">Total</span>
                <span id="co-total" class="text-gray-900 font-semibold">$0.00</span>
              </div>
            </div>

            <div class="mt-6">
              <a href="/order" class="text-sm text-primary-600 hover:text-primary-700">Track an order</a>
            </div>
          </div>
        </aside>
      </div>
    </section>
  </main>

  <script>
    import { api } from '@lib/api';
    import { getCart, clearCart, formatPrice } from '@lib/cart';

    const itemsEl = document.getElementById('co-items');
    const emptyEl = document.getElementById('co-empty');
    const subtotalEl = document.getElementById('co-subtotal');
    const totalEl = document.getElementById('co-total');

    const form = document.getElementById('checkout-form');
    const alertEl = document.getElementById('checkout-alert');
    const emptyCtaEl = document.getElementById('co-empty-cta');
    const submitBtn = document.getElementById('co-submit');

    const paymentCard = document.getElementById('payment-card');
    const paymentEl = document.getElementById('payment-element');
    const paymentMsgEl = document.getElementById('payment-message');
    const payNowBtn = document.getElementById('pay-now');
    const paymentStatusEl = document.getElementById('payment-status');

    // Coupon elements
    const couponInput = document.getElementById('coupon-input') as HTMLInputElement;
    const applyCouponBtn = document.getElementById('apply-coupon');
    const couponMessage = document.getElementById('coupon-message');
    const couponApplied = document.getElementById('coupon-applied');
    const couponCodeDisplay = document.getElementById('coupon-code-display');
    const couponDiscountEl = document.getElementById('coupon-discount');
    const removeCouponBtn = document.getElementById('remove-coupon');
    const discountRow = document.getElementById('discount-row');
    const coDiscountEl = document.getElementById('co-discount');

    let appliedCoupon: { code: string; coupon_id: string; discount_amount: number; discount_type: string } | null = null;

    const stripePk = import.meta.env.PUBLIC_STRIPE_PUBLISHABLE_KEY || '';
    const stripeReturnBase = import.meta.env.PUBLIC_SITE_URL || window.location.origin;

    let stripe = null;
    let elements = null;
    let currentOrder = null;

    function setAlert(message) {
      if (!alertEl) return;
      if (!message) {
        alertEl.classList.add('hidden');
        alertEl.textContent = '';
        return;
      }
      alertEl.classList.remove('hidden');
      alertEl.textContent = message;
    }

    function setPaymentMessage(message) {
      if (!paymentMsgEl) return;
      if (!message) {
        paymentMsgEl.classList.add('hidden');
        paymentMsgEl.textContent = '';
        return;
      }
      paymentMsgEl.classList.remove('hidden');
      paymentMsgEl.textContent = message;
    }

    function setPaymentStatus(message) {
      if (!paymentStatusEl) return;
      paymentStatusEl.textContent = message || '';
    }

    function renderSummary() {
      if (!itemsEl || !subtotalEl || !totalEl || !emptyEl) return;

      const cart = getCart();
      const subtotal = cart.subtotal;
      const discount = appliedCoupon?.discount_amount || 0;
      const total = Math.max(0, subtotal - discount);

      subtotalEl.textContent = formatPrice(subtotal);
      totalEl.textContent = formatPrice(total);

      // Update discount display
      if (discount > 0 && discountRow && coDiscountEl) {
        discountRow.classList.remove('hidden');
        coDiscountEl.textContent = `-${formatPrice(discount)}`;
      } else if (discountRow) {
        discountRow.classList.add('hidden');
      }

      const isEmpty = cart.items.length === 0;
      if (submitBtn) {
        submitBtn.toggleAttribute('disabled', isEmpty);
        submitBtn.classList.toggle('opacity-50', isEmpty);
        submitBtn.classList.toggle('pointer-events-none', isEmpty);
      }
      if (emptyCtaEl) emptyCtaEl.classList.toggle('hidden', !isEmpty);

      if (cart.items.length === 0) {
        itemsEl.innerHTML = '';
        emptyEl.classList.remove('hidden');
        return;
      }

      emptyEl.classList.add('hidden');
      itemsEl.innerHTML = cart.items
        .map((item) => {
          return `
            <div class="flex items-start justify-between gap-3">
              <div class="text-sm">
                <div class="font-medium text-gray-900">${item.name}</div>
                <div class="text-gray-500">Qty ${item.quantity}</div>
              </div>
              <div class="text-sm font-semibold text-gray-900">${formatPrice(item.price * item.quantity)}</div>
            </div>
          `;
        })
        .join('');
    }

    async function placeOrder(payload) {
      const cart = getCart();
      if (cart.items.length === 0) {
        setAlert('Your cart is empty.');
        return;
      }

      const validation = await api.validateCart(cart.items);
      if (!validation.success || !validation.data) {
        setAlert(validation.error || 'Failed to validate cart.');
        return;
      }

      if (!validation.data.valid) {
        setAlert('Some items are no longer available. Please go back to cart and update.');
        return;
      }

      const orderData: any = {
        customer: {
          email: payload.email,
          name: payload.name,
          phone: payload.phone,
        },
        shippingAddress: {
          address: payload.address,
          city: payload.city,
          postalCode: payload.zip,
          country: payload.country,
        },
        items: cart.items,
      };

      // Add coupon if applied
      if (appliedCoupon) {
        orderData.coupon_id = appliedCoupon.coupon_id;
        orderData.coupon_code = appliedCoupon.code;
        orderData.discount_amount = appliedCoupon.discount_amount;
      }

      const res = await api.createOrder(orderData);

      if (!res.success) {
        setAlert(res.error || 'Failed to create order.');
        return;
      }

      if (!res.data) {
        setAlert('Order creation returned no data.');
        return;
      }

      const orderId = res.data?.orderId;
      const clientSecret = res.data?.clientSecret;

      if (!orderId || !clientSecret) {
        setAlert('Order created but payment is unavailable (missing Stripe client secret).');
        return;
      }

      if (!stripePk) {
        setAlert('Missing Stripe publishable key (PUBLIC_STRIPE_PUBLISHABLE_KEY).');
        return;
      }

      if (!window.Stripe) {
        setAlert('Stripe.js failed to load. Please refresh and try again.');
        return;
      }

      if (!paymentCard || !paymentEl) {
        setAlert('Payment UI is not available.');
        return;
      }

      currentOrder = { orderId, email: payload.email };
      stripe = window.Stripe(stripePk);
      elements = stripe.elements({ clientSecret });

      const paymentElement = elements.create('payment');
      paymentElement.mount(paymentEl);

      paymentCard.classList.remove('hidden');
      setPaymentStatus(`Order ${orderId} created. Complete payment to confirm.`);
      setPaymentMessage('');
      setAlert('');

      if (submitBtn) {
        submitBtn.toggleAttribute('disabled', true);
        submitBtn.classList.add('opacity-50');
        submitBtn.classList.add('pointer-events-none');
      }
    }

    async function confirmPayment() {
      if (!stripe || !elements || !currentOrder) {
        setPaymentMessage('Payment is not ready yet.');
        return;
      }

      if (payNowBtn) {
        payNowBtn.toggleAttribute('disabled', true);
        payNowBtn.classList.add('opacity-50');
        payNowBtn.classList.add('pointer-events-none');
      }

      setPaymentMessage('');
      setPaymentStatus('Processing payment...');

      const u = new URL('/order-confirm', stripeReturnBase);
      u.searchParams.set('orderId', currentOrder.orderId);
      u.searchParams.set('email', currentOrder.email);

      const result = await stripe.confirmPayment({
        elements,
        confirmParams: {
          return_url: u.toString(),
        },
        redirect: 'if_required',
      });

      if (result.error) {
        setPaymentStatus('Payment failed');
        setPaymentMessage(result.error.message || 'Payment failed.');
        if (payNowBtn) {
          payNowBtn.toggleAttribute('disabled', false);
          payNowBtn.classList.remove('opacity-50');
          payNowBtn.classList.remove('pointer-events-none');
        }
        return;
      }

      clearCart();
      renderSummary();

      window.location.href = u.pathname + u.search;
    }

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      setAlert('');

      const email = String(document.getElementById('co-email')?.value || '').trim();
      const name = String(document.getElementById('co-name')?.value || '').trim();
      const phone = String(document.getElementById('co-phone')?.value || '').trim();
      const address = String(document.getElementById('co-address')?.value || '').trim();
      const city = String(document.getElementById('co-city')?.value || '').trim();
      const zip = String(document.getElementById('co-zip')?.value || '').trim();
      const country = String(document.getElementById('co-country')?.value || '').trim();

      if (!email || !name || !address || !city || !zip || !country) {
        setAlert('Please fill in all required fields.');
        return;
      }

      await placeOrder({ email, name, phone, address, city, zip, country });
    });

    payNowBtn?.addEventListener('click', async () => {
      await confirmPayment();
    });

    window.addEventListener('cart-updated', () => {
      renderSummary();
    });

    renderSummary();

    // Coupon functionality
    async function applyCoupon() {
      const code = couponInput?.value?.trim().toUpperCase();
      if (!code) return;

      const cart = getCart();
      if (cart.items.length === 0) {
        showCouponMessage('Add items to cart first', 'error');
        return;
      }

      try {
        const response = await fetch(`${import.meta.env.PUBLIC_API_URL || ''}/api/coupons/validate`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            code,
            subtotal: cart.subtotal,
            email: (document.getElementById('co-email') as HTMLInputElement)?.value || '',
          }),
        });

        const res = await response.json();

        if (res.success && res.valid) {
          appliedCoupon = {
            code,
            coupon_id: res.coupon_id,
            discount_amount: res.discount_amount,
            discount_type: res.discount_type,
          };
          showCouponApplied();
          renderSummary();
        } else {
          showCouponMessage(res.error || 'Invalid coupon code', 'error');
        }
      } catch {
        showCouponMessage('Failed to validate coupon', 'error');
      }
    }

    function removeCoupon() {
      appliedCoupon = null;
      if (couponInput) couponInput.value = '';
      if (couponApplied) couponApplied.classList.add('hidden');
      if (couponMessage) couponMessage.classList.add('hidden');
      renderSummary();
    }

    function showCouponMessage(message: string, type: 'success' | 'error') {
      if (!couponMessage) return;
      couponMessage.textContent = message;
      couponMessage.className = `mt-2 text-sm ${type === 'error' ? 'text-red-600' : 'text-green-600'}`;
      couponMessage.classList.remove('hidden');
      if (couponApplied) couponApplied.classList.add('hidden');
    }

    function showCouponApplied() {
      if (!couponApplied || !appliedCoupon) return;
      if (couponMessage) couponMessage.classList.add('hidden');
      if (couponCodeDisplay) couponCodeDisplay.textContent = appliedCoupon.code;
      if (couponDiscountEl) couponDiscountEl.textContent = `-${formatPrice(appliedCoupon.discount_amount)}`;
      couponApplied.classList.remove('hidden');
    }

    applyCouponBtn?.addEventListener('click', applyCoupon);
    couponInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        applyCoupon();
      }
    });
    removeCouponBtn?.addEventListener('click', removeCoupon);
  </script>
</Layout>
