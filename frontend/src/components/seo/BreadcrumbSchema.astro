---
export interface Props {
  items: { name: string; url: string }[];
}

const { items } = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: items.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.name,
    item: item.url,
  })),
};
---

<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
