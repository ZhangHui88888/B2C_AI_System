---
export interface Props {
  faqs: { question: string; answer: string }[];
}

const { faqs } = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((f) => ({
    '@type': 'Question',
    name: f.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: f.answer,
    },
  })),
};
---

<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
