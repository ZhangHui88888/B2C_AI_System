---
export interface Props {
  items: { question: string; answer: string }[];
}

const { items } = Astro.props;
---

<div class="space-y-3">
  {items.map((item) => (
    <div class="card p-4">
      <div class="font-semibold text-gray-900">Q: {item.question}</div>
      <div class="mt-2 text-gray-700">A: {item.answer}</div>
    </div>
  ))}
</div>
