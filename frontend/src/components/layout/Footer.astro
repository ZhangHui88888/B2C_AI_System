---
import PaymentBadges from '@components/trust/PaymentBadges.astro';
import SSLBadge from '@components/trust/SSLBadge.astro';
import SocialLinks from '@components/trust/SocialLinks.astro';

export interface Props {
  siteName: string;
  socialLinks?: Record<string, any>;
}

const { siteName, socialLinks = {} } = Astro.props;
---

<footer class="bg-gray-900 text-gray-400 py-12">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-white font-display font-bold text-lg mb-4">{siteName}</h3>
        <p class="text-sm">Your trusted online store for quality products.</p>
        <div class="mt-4 space-y-2">
          <SSLBadge />
          <PaymentBadges />
        </div>
      </div>

      <div>
        <h4 class="text-white font-semibold mb-4">About</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/about" class="hover:text-white">About Us</a></li>
          <li><a href="/contact" class="hover:text-white">Contact</a></li>
          <li><a href="/blog" class="hover:text-white">Blog</a></li>
          <li><a href="/faq" class="hover:text-white">FAQ</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-white font-semibold mb-4">Policies</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/privacy" class="hover:text-white">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-white">Terms of Service</a></li>
          <li><a href="/returns" class="hover:text-white">Returns & Refunds</a></li>
          <li><a href="/shipping" class="hover:text-white">Shipping Info</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-white font-semibold mb-4">Newsletter</h4>
        <p class="text-sm mb-4">Subscribe for updates and exclusive offers.</p>
        <form action="#" class="flex gap-2" onsubmit="return false;">
          <input type="email" placeholder="Your email" class="input flex-1 text-sm py-2" />
          <button type="submit" class="btn-primary text-sm py-2 px-4">Subscribe</button>
        </form>

        <div class="mt-6">
          <h4 class="text-white font-semibold mb-3">Follow</h4>
          <SocialLinks links={socialLinks} />
        </div>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row items-center justify-between gap-4 text-sm">
      <p>&copy; {new Date().getFullYear()} {siteName}. All rights reserved.</p>
      <div class="flex items-center gap-4">
        <a href="/sitemap.xml" class="hover:text-white">Sitemap</a>
        <a href="/robots.txt" class="hover:text-white">Robots</a>
      </div>
    </div>
  </div>
</footer>
