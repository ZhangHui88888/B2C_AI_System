---
import type { Category } from '@lib/database.types';
import MiniCart from '@components/cart/MiniCart.astro';

export interface Props {
  siteName: string;
  categories: Category[];
}

const { siteName, categories } = Astro.props;

const topCategories = (categories || []).filter((c) => !c.parent_id);
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="container-custom py-4">
    <div class="flex items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 text-gray-700"
          type="button"
          aria-label="Open menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <a href="/" class="text-2xl font-display font-bold text-primary-600">
          {siteName}
        </a>
      </div>

      <nav class="hidden md:flex items-center gap-6">
        <a href="/products" class="text-gray-700 hover:text-primary-600 font-medium">Products</a>
        {topCategories.map((cat) => (
          <a href={`/category/${cat.slug}`} class="text-gray-700 hover:text-primary-600 font-medium">
            {cat.name}
          </a>
        ))}
        <a href="/blog" class="text-gray-700 hover:text-primary-600 font-medium">Blog</a>
        <a href="/faq" class="text-gray-700 hover:text-primary-600 font-medium">FAQ</a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium">About</a>
        <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium">Contact</a>
      </nav>

      <div class="flex items-center gap-2 md:gap-3">
        <form action="/products" method="get" class="hidden lg:flex items-center gap-2">
          <input
            class="input py-2 text-sm w-64"
            type="search"
            name="search"
            placeholder="Search products"
            aria-label="Search"
          />
          <button type="submit" class="btn-outline text-sm py-2 px-3">Search</button>
        </form>

        <a href="/cart" class="relative p-2 rounded-lg hover:bg-gray-100 text-gray-700" aria-label="Cart">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span
            id="cart-count"
            class="hidden absolute -top-1 -right-1 bg-primary-600 text-white text-xs rounded-full h-5 w-5 items-center justify-center"
          >
            0
          </span>
        </a>

        <button
          id="mini-cart-open"
          type="button"
          class="hidden sm:inline-flex btn-ghost py-2 px-3 text-sm"
        >
          Cart
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 border-t border-gray-200 pt-4">
      <form action="/products" method="get" class="flex items-center gap-2 mb-4">
        <input class="input py-2 text-sm flex-1" type="search" name="search" placeholder="Search products" />
        <button type="submit" class="btn-outline text-sm py-2 px-3">Search</button>
      </form>

      <div class="flex flex-col gap-3">
        <a href="/products" class="text-gray-700 hover:text-primary-600 font-medium">Products</a>
        {topCategories.map((cat) => (
          <a href={`/category/${cat.slug}`} class="text-gray-700 hover:text-primary-600 font-medium">
            {cat.name}
          </a>
        ))}
        <a href="/blog" class="text-gray-700 hover:text-primary-600 font-medium">Blog</a>
        <a href="/faq" class="text-gray-700 hover:text-primary-600 font-medium">FAQ</a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium">About</a>
        <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium">Contact</a>
      </div>
    </div>
  </div>

  <MiniCart />

  <script>
    import { getCart } from '@lib/cart';

    function updateCartCount() {
      const cart = getCart();
      const countEl = document.getElementById('cart-count');
      if (!countEl) return;

      if (cart.itemCount > 0) {
        countEl.textContent = String(cart.itemCount);
        countEl.classList.remove('hidden');
        countEl.classList.add('flex');
      } else {
        countEl.classList.add('hidden');
        countEl.classList.remove('flex');
      }
    }

    updateCartCount();
    window.addEventListener('cart-updated', updateCartCount);

    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });

    const openMiniCartBtn = document.getElementById('mini-cart-open');
    openMiniCartBtn?.addEventListener('click', () => {
      window.dispatchEvent(new CustomEvent('mini-cart-open'));
    });
  </script>
</header>
