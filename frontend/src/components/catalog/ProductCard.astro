---
import type { Product } from '@lib/database.types';
import { formatPrice } from '@lib/cart';

export interface Props {
  product: Product;
}

const { product } = Astro.props;
---

<article class="card">
  <a href={`/products/${product.slug}`} class="block">
    <div class="aspect-square bg-gray-100 overflow-hidden">
      {product.main_image_url ? (
        <img src={product.main_image_url} alt={product.name} class="h-full w-full object-cover" loading="lazy" />
      ) : (
        <div class="h-full w-full flex items-center justify-center text-gray-400 text-sm">No image</div>
      )}
    </div>
    <div class="p-4">
      <h3 class="text-lg font-display font-bold line-clamp-2">{product.name}</h3>
      {product.short_description && <p class="mt-2 text-sm text-gray-600 line-clamp-2">{product.short_description}</p>}
      <div class="mt-3 flex items-center gap-2">
        <span class="text-lg font-semibold text-gray-900">{formatPrice(Number(product.price))}</span>
        {product.compare_price && (
          <span class="text-sm text-gray-500 line-through">{formatPrice(Number(product.compare_price))}</span>
        )}
      </div>
    </div>
  </a>
</article>
